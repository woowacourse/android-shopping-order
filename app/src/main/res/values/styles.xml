<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="QuantityButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/gray_55</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="PaymentPrice">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="PaymentLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_33</item>
    </style>
</resources>
