<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ProductCounterView">
        <attr name="useSkeleton" format="boolean" />
        <attr name="count" format="integer" />
        <attr name="min_count" format="integer" />
        <attr name="max_count" format="integer" />
    </declare-styleable>

    <declare-styleable name="SkeletonImageView">
        <attr name="skeletonImageBackground" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="SkeletonTextView">
        <attr name="skeletonTextBackground" format="reference|color" />
    </declare-styleable>
</resources>
