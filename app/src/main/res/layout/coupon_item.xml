<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/cart_item_background"
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <CheckBox
            android:id="@+id/checkbox_selected_coupon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            style="@style/PayCouponTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/checkbox_selected_coupon"
            app:layout_constraintTop_toTopOf="@id/checkbox_selected_coupon"
            android:layout_marginTop="6dp"
            android:text="5,000원 할인 쿠폰" />

        <TextView
            style="@style/PayCouponSubTitleStyle"
            android:id="@+id/textview_coupon_expire"
            app:layout_constraintStart_toStartOf="@id/checkbox_selected_coupon"
            app:layout_constraintTop_toBottomOf="@id/checkbox_selected_coupon"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/textview_coupon_condition"
            style="@style/PayCouponSubTitleStyle"
            app:layout_constraintStart_toStartOf="@id/checkbox_selected_coupon"
            app:layout_constraintTop_toBottomOf="@id/textview_coupon_expire"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최소 주문 금액: 100,000원"
            android:layout_marginBottom="18dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
