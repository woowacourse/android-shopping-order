<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="loadItem"
            type="woowacourse.shopping.view.product.ProductsItem.LoadItem" />

        <variable
            name="load"
            type="kotlin.jvm.functions.Function0" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/productsMoreButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="20dp"
            android:background="@color/gray_e3"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:minHeight="0dp"
            android:onClick="@{() -> load.invoke()}"
            android:padding="12dp"
            android:text="@string/products_more_button"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="@{loadItem.loadable ? View.VISIBLE : View.GONE}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
