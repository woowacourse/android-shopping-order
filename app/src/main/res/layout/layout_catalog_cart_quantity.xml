<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="woowacourse.shopping.ui.catalog.CatalogViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:background="@color/gray_5">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_products_cart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/productsCartQuantityText"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/bg_products_mint_1_circle"
            android:gravity="center"
            android:text="@{String.valueOf(viewModel.catalogProducts.catalogProductsQuantity)}"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            app:isGone="@{viewModel.catalogProducts.catalogProductsQuantity &lt;= 0}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>