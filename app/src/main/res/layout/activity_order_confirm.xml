<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="presenter"
            type="woowacourse.shopping.feature.order.confirm.OrderConfirmContract.Presenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.order.confirm.OrderConfirmActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/final_pay_amount_price_layout"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/start_guideline"
                    app:layout_constraintGuide_begin="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="match_parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/end_guideline"
                    android:layout_width="wrap_content"
                    app:layout_constraintGuide_end="20dp"
                    android:orientation="vertical"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/order_product_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cart_order_product"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_product_recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/item_order_confirm_item"
                    app:layout_constraintTop_toBottomOf="@id/order_product_text_view"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    android:layout_marginTop="4dp" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/order_product_divider"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/order_product_recycler_view" />

                <TextView
                    android:id="@+id/sale_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sale"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/order_product_divider"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/order_sale_middle_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    app:layout_constraintTop_toBottomOf="@id/sale_text_view" />

                <LinearLayout
                    android:id="@+id/sale_info_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/sale_info_box"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="27dp"
                    app:layout_constraintTop_toBottomOf="@id/order_sale_middle_divider">

                    <TextView
                        android:id="@+id/sale_category_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="50,000 원 이상 구매 시"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/sale_amount_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="5000원 할인"
                        android:textSize="16sp"
                        android:textColor="@color/mint" />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/order_sale_divider"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sale_info_layout" />

                <TextView
                    android:id="@+id/pay_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_amount"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/order_sale_divider"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/pay_middle_divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    app:layout_constraintTop_toBottomOf="@id/pay_text_view" />

                <TextView
                    android:id="@+id/order_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_pay_amount"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintTop_toBottomOf="@id/pay_middle_divider" />

                <TextView
                    android:id="@+id/pay_origin_price_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/order_pay_amount"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    tools:text="84,400원" />

                <TextView
                    android:id="@+id/sale_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sale_amount"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/start_guideline"
                    app:layout_constraintTop_toBottomOf="@id/order_pay_amount" />

                <TextView
                    android:id="@+id/pay_sale_amount_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="@id/sale_amount"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    tools:text="- 5,000원" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

        <LinearLayout
            android:id="@+id/final_pay_amount_price_layout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/gray_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toTopOf="@id/order_btn"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/final_pay_amount"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/final_pay_amount_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="79,400원"
                android:textColor="@color/black"
                android:gravity="end"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/order_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:paddingVertical="12dp"
            android:onClick="@{()->presenter.requestOrder()}"
            android:text="@string/cart_order"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>