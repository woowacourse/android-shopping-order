<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="woowacourse.shopping.presentation.detail.ProductDetailViewModel" />

        <variable
            name="actionHandler"
            type="woowacourse.shopping.presentation.detail.ProductDetailActionHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.detail.ProductDetailActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_detail"
            style="@style/ToolbarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/menu_detail" />

        <ImageView
            android:id="@+id/iv_product_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:imageUrl="@{viewModel.productUiModel.product.imageUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_detail" />

        <TextView
            android:id="@+id/tv_product_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{viewModel.productUiModel.product.name}"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/divider_product_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
            tools:text="[든든] 동원 스위트콘" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_product_detail"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:dividerColor="@color/gray_200"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_title" />

        <TextView
            android:id="@+id/tv_product_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@{@string/product_price(viewModel.productUiModel.product.price)}"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/divider_product_detail"
            tools:text="99,800원" />

        <include
            android:id="@+id/btn_add_cart_quantity"
            layout="@layout/btn_add_cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            app:onPlusClickListener = "@{() -> actionHandler.onClickPlusButton()}"
            app:onMinusClickListener = "@{() -> actionHandler.onClickMinusButton()}"
            app:countNum = "@{viewModel.productUiModel.quantity.count}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/divider_product_detail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_border_4"
            android:onClick="@{() -> actionHandler.onClickRecentProduct()}"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_add_cart_quantity"
            app:visibility="@{true}">

            <TextView
                android:id="@+id/iv_product_detail_last_recent_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="16dp"
                android:text="@string/last_recent_product"
                android:textColor="@color/teal_500"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_product_detail_last_recent_product_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_product_detail_last_recent_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="@{viewModel.lastRecentProduct.product.name\}"
                android:textColor="@color/gray_500"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_product_detail_last_recent_product"
                app:layout_constraintTop_toBottomOf="@id/iv_product_detail_last_recent_product"
                tools:text="PET보틀-정사각형(500ml)" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_product_detail_add_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_add_cart_button"
            android:enabled="@{viewModel.productUiModel.quantity.greaterThanMin}"
            android:paddingVertical="12dp"
            android:text="@string/product_detail_add_cart"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:onClick="@{() -> actionHandler.onClickAddCartProduct()}"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
