<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="woowacourse.shopping.presentation.model.ProductModel" />

        <variable
            name="recentProduct"
            type="woowacourse.shopping.presentation.model.RecentProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_product_detail_thumbnail"
            setImageUrl="@{product.imageUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_product_detail_title"
            setText="@{product.title}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_product_detail_thumbnail"
            tools:text="[든든] 동원 스위트콘" />

        <View
            android:id="@+id/view_product_detail_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="@color/product_view_line_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_title" />

        <TextView
            android:id="@+id/tv_product_detail_price_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:text="@string/product_detail_price_info"
            android:textColor="@color/product_info_text_color"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_product_detail_line" />

        <TextView
            android:id="@+id/tv_product_detail_price"
            setPrice="@{product.price}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:gravity="end"
            android:textColor="@color/product_info_text_color"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_product_detail_price_info"
            app:layout_constraintTop_toBottomOf="@id/view_product_detail_line"
            tools:text="10,000원" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_last_product_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="28dp"
            android:background="@drawable/stroke_round"
            android:paddingHorizontal="18dp"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toTopOf="@id/bt_product_detail_add_to_cart"
            app:layout_constraintTop_toBottomOf="@id/tv_product_detail_price_info">

            <TextView
                android:id="@+id/tv_last_product_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/d"
                android:textColor="@color/main_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_last_product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/product_info_text_color"
                android:textSize="18sp"
                setText="@{recentProduct.product.title}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_last_product_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_last_product_info"
                tools:text="[든든] 동원 스위트콘" />

            <TextView
                android:id="@+id/tv_last_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/product_info_text_color"
                android:textSize="16sp"
                setPrice="@{recentProduct.product.price}"
                app:layout_constraintBottom_toBottomOf="@id/tv_last_product_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_last_product_title"
                tools:text="10,000원" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/bt_product_detail_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/main_color"
            android:text="@string/product_detail_button_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,360:50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

