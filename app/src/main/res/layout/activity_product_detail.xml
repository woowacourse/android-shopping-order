<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.view.productDetail.ProductDetailViewModel" />

        <variable
            name="productDetailActionsListener"
            type="woowacourse.shopping.view.productDetail.ProductDetailActionsListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/productDetailRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".view.productDetail.ProductDetailActivity">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productDetailToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_5"
                android:gravity="center_vertical"
                android:minHeight="?attr/actionBarSize"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:onClick="@{() -> productDetailActionsListener.onClose()}"
                    android:padding="16dp"
                    android:src="@drawable/ic_close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/productDetailImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                app:imageUrl="@{viewModel.product.imageUrl}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@id/productDetailToolbar" />

            <TextView
                android:id="@+id/productDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="16dp"
                android:text="@{viewModel.product.name}"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/productDetailImage"
                tools:text="[든든] 동원 스위트콘" />

            <View
                android:id="@+id/productDetailDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/gray_a"
                app:layout_constraintTop_toBottomOf="@id/productDetailName" />

            <TextView
                android:id="@+id/productDetailPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="18dp"
                android:text="@{@string/product_price_format(viewModel.product.price * viewModel.quantity)}"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/productDetailQuantityStepper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productDetailDivider"
                tools:text="99,800,800,800,800,800,800원" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productDetailQuantityStepper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/productDetailPrice"
                app:layout_constraintTop_toBottomOf="@id/productDetailDivider">

                <TextView
                    android:id="@+id/shoppingCartProductQuantityMinusButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{() -> productDetailActionsListener.onMinusProductQuantity()}"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="12dp"
                    android:text="@string/product_quantity_minus"
                    android:textColor="@color/gray_5"
                    android:textSize="22sp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/shoppingCartProductQuantity"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/shoppingCartProductQuantity"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@{String.valueOf(viewModel.quantity)}"
                    android:textColor="@color/gray_5"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="@id/shoppingCartProductQuantityMinusButton"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toStartOf="@id/shoppingCartProductQuantityPlusButton"
                    app:layout_constraintStart_toEndOf="@id/shoppingCartProductQuantityMinusButton"
                    app:layout_constraintTop_toTopOf="@id/shoppingCartProductQuantityMinusButton"
                    app:layout_constraintVertical_chainStyle="spread"
                    tools:text="1" />

                <TextView
                    android:id="@+id/shoppingCartProductQuantityPlusButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:onClick="@{() -> productDetailActionsListener.onPlusProductQuantity()}"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="12dp"
                    android:text="@string/product_quantity_plus"
                    android:textColor="@color/gray_5"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/shoppingCartProductQuantityMinusButton"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shoppingCartProductQuantity"
                    app:layout_constraintTop_toTopOf="@id/shoppingCartProductQuantityMinusButton" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productDetailLastViewedProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/background_last_viewed_product"
                android:onClick="@{() -> productDetailActionsListener.onSelectLatestViewedProduct()}"
                android:paddingHorizontal="18dp"
                android:paddingVertical="16dp"
                android:visibility="@{viewModel.latestViewedProduct != null &amp;&amp; !viewModel.product.equals(viewModel.latestViewedProduct) ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toBottomOf="@id/productDetailPrice">

                <TextView
                    android:id="@+id/productDetailLastViewedProductTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="마지막으로 본 상품"
                    android:textColor="@color/mint"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/productDetailLastViewedProductName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/productDetailLastViewedProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.latestViewedProduct.name}"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productDetailLastViewedProductTitle"
                    tools:text="PET보틀-정사각형(500ml)" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/productDetailAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@color/mint"
                android:gravity="center"
                android:onClick="@{() -> productDetailActionsListener.onAddToShoppingCart()}"
                android:paddingVertical="12dp"
                android:text="@string/product_detail_add_to_shopping_cart"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/productDetailLastViewedProduct" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
