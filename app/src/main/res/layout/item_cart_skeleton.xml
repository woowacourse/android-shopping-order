<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    android:background="@drawable/grey_border">

    <TextView
        android:id="@+id/tv_cart_skeleton_product_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/skeleton_background"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_cart_skeleton_product_image"
        android:layout_width="136dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/skeleton_background"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="@id/tv_cart_skeleton_product_name"
        app:layout_constraintTop_toBottomOf="@id/tv_cart_skeleton_product_name" />

    <View
        android:id="@+id/view_cart_skeleton_product_quantity"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="17dp"
        android:background="@color/skeleton_background"
        app:layout_constraintBottom_toTopOf="@id/tv_cart_skeleton_product_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_cart_skeleton_product_image" />

    <TextView
        android:id="@+id/tv_cart_skeleton_product_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/skeleton_background"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/view_cart_skeleton_product_image"
        app:layout_constraintEnd_toEndOf="@id/view_cart_skeleton_product_quantity"
        app:layout_constraintTop_toBottomOf="@id/view_cart_skeleton_product_quantity" />

</androidx.constraintlayout.widget.ConstraintLayout>