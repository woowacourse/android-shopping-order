<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="18dp"
    android:paddingBottom="6dp"
    android:paddingTop="30dp">

    <TextView
        android:id="@+id/tv_coupon_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/available_coupon"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/coupon_description"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_coupon_header"
        app:layout_constraintTop_toBottomOf="@id/tv_coupon_header" />

</androidx.constraintlayout.widget.ConstraintLayout>
