<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="order"
            type="woowacourse.shopping.ui.model.Order" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_woowa_light_gray_line_1_rect">

        <TextView
            android:id="@+id/tv_order_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ellipsize="end"
            android:gravity="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/woowa_text_black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_order_item_product"
            app:layout_constraintTop_toTopOf="parent"
            app:productNameCount="@{order}"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/iv_order_item_product"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            app:image="@{order.orderItems[0].product.imageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_order_item_on_image_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/tv_order_on_image_count(order.orderItems.size - 1)}"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            android:visibility="@{(order.orderItems.size - 1) > 0 ? View.VISIBLE :View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_order_item_product"
            app:layout_constraintEnd_toEndOf="@+id/iv_order_item_product"
            app:layout_constraintStart_toStartOf="@+id/iv_order_item_product"
            app:layout_constraintTop_toTopOf="@+id/iv_order_item_product"
            tools:text="+3" />


        <TextView
            android:id="@+id/tv_order_item_total_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/tv_order_item_total_price_title"
            android:textColor="@color/woowa_text_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_order_item_total_price"
            app:layout_constraintEnd_toStartOf="@+id/tv_order_item_total_price"
            app:layout_constraintTop_toTopOf="@+id/tv_order_item_total_price" />

        <TextView
            android:id="@+id/tv_order_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@{@string/price_format(order.totalPrice.value)}"
            android:textColor="@color/woowa_text_black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="99,800원" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
