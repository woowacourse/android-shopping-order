<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:background="@drawable/shopping_cart_item_gridview">

    <ImageView
        android:id="@+id/iv_placeholder_product_name"
        app:layout_constraintRight_toLeftOf="@id/iv_placeholder_cart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@color/gray_200"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="48dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_placeholder_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_placeholder_product_name"
        app:layout_constraintTop_toBottomOf="@id/iv_placeholder_product_name"
        android:layout_width="136dp"
        android:background="@color/gray_200"
        android:layout_height="72dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
