<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="productItem"
            type="woowacourse.shopping.view.product.ProductsItem.ProductItem" />

        <variable
            name="productItemActionListener"
            type="woowacourse.shopping.view.product.ProductItemActionListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:onClick="@{() -> productItemActionListener.onSelectProduct(productItem)}">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="154dp"
            android:layout_height="0dp"
            android:contentDescription="@{productItem.name}"
            app:imageUrl="@{productItem.imageUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/product_image_error" />

        <ImageView
            android:id="@+id/productAddButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_add"
            android:elevation="3dp"
            android:onClick="@{() -> productItemActionListener.onPlusProductQuantity(productItem)}"
            android:src="@drawable/ic_add"
            android:visibility="@{productItem.quantity &lt;= 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/productImage"
            app:layout_constraintEnd_toEndOf="@id/productImage" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/productQuantityStepper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_product_quantity_selector"
            android:elevation="3dp"
            android:visibility="@{productItem.quantity > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/productImage"
            app:layout_constraintEnd_toEndOf="@id/productImage"
            app:layout_constraintStart_toStartOf="@id/productImage">

            <TextView
                android:id="@+id/productQuantityMinusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="@{() -> productItemActionListener.onMinusProductQuantity(productItem)}"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:text="@string/product_quantity_minus"
                android:textColor="@color/gray_5"
                android:textSize="22sp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/productQuantity"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/productQuantity"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@{String.valueOf(productItem.quantity)}"
                android:textColor="@color/gray_5"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/productQuantityMinusButton"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/productQuantityPlusButton"
                app:layout_constraintStart_toEndOf="@id/productQuantityMinusButton"
                app:layout_constraintTop_toTopOf="@id/productQuantityMinusButton"
                tools:text="1" />

            <TextView
                android:id="@+id/productQuantityPlusButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:onClick="@{() -> productItemActionListener.onPlusProductQuantity(productItem)}"
                android:paddingHorizontal="15dp"
                android:paddingVertical="12dp"
                android:text="@string/product_quantity_plus"
                android:textColor="@color/gray_5"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/productQuantityMinusButton"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/productQuantity"
                app:layout_constraintTop_toTopOf="@id/productQuantityMinusButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{productItem.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/productImage"
            app:layout_constraintStart_toStartOf="@id/productImage"
            app:layout_constraintTop_toBottomOf="@id/productImage"
            tools:text="PET보틀-정사각형어쩌구저쩌구" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{@string/product_price_format(productItem.price)}"
            android:textColor="@color/gray_5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/productName"
            app:layout_constraintStart_toStartOf="@id/productName"
            app:layout_constraintTop_toBottomOf="@id/productName"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
