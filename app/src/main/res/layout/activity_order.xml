<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.presentation.order.OrderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.order.OrderActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_order"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/baemin"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/order_toolbar_text"
            app:titleTextColor="@color/white" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />

        <TextView
            android:id="@+id/tv_available_coupon_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_available_coupon"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_12"
            tools:text="적용 가능한 쿠폰" />

        <TextView
            android:id="@+id/tv_available_coupon_info_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/order_available_coupon_info"
            app:layout_constraintStart_toStartOf="@id/tv_available_coupon_message"
            app:layout_constraintTop_toBottomOf="@id/tv_available_coupon_message"
            tools:text="* 쿠폰은 1개만 적용 가능합니다." />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_coupon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/guideline_horizontal_60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_25"
            tools:listitem="@layout/item_coupon" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.60" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/coupon_price_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_divider_height"
            android:layout_marginTop="@dimen/order_divider_margin_top"
            app:dividerColor="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_60" />

        <TextView
            android:id="@+id/tv_order_price_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/order_price"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coupon_price_divider" />

        <TextView
            android:id="@+id/tv_order_price_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_price_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_order_price_message"
            tools:text="204,200원" />

        <TextView
            android:id="@+id/tv_coupon_discount_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/order_coupon_discount"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_order_price_message"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price_message" />

        <TextView
            android:id="@+id/tv_coupon_discount_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_coupon_discount_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_coupon_discount_message"
            tools:text="-5,000원" />

        <TextView
            android:id="@+id/tv_delivery_price_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/order_delivery_price"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_coupon_discount_message"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_discount_message" />

        <TextView
            android:id="@+id/tv_delivery_price_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_delivery_price_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_delivery_price_message"
            tools:text="3,000원" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/price_totalPrice_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/order_divider_height"
            android:layout_marginTop="@dimen/order_divider_margin_top"
            app:dividerColor="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/tv_delivery_price_message" />

        <TextView
            android:id="@+id/tv_total_price_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/order_total_price"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_delivery_price_message"
            app:layout_constraintTop_toBottomOf="@id/price_totalPrice_divider" />

        <TextView
            android:id="@+id/tv_total_price_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_total_price_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_total_price_message"
            tools:text="202,200원" />

        <TextView
            android:id="@+id/tv_order_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baemin"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:text="@string/order_submit"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>