<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="orderClickListener"
            type="woowacourse.shopping.view.order.OrderActivityClickListener" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.view.order.OrderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/shoppingCartRecommendToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_5"
            android:gravity="center_vertical"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:onClick="@{()->orderClickListener.onBackButtonClick()}"
                android:id="@+id/shoppingCartBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:padding="16dp"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="71dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:text="결제하기"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/shoppingCartBackButton"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:fillViewport="true"
            android:maxHeight="@dimen/material_emphasis_disabled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shoppingCartRecommendToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/couponTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/available_coupon"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/couponDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/available_coupon_description"
                    android:textColor="@color/gray_5"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/couponTitle" />

                <View
                    android:id="@+id/divider1"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@color/gray_eb"
                    app:layout_constraintBottom_toTopOf="@id/totalPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toTopOf="@id/couponDiscount"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@{@string/product_price_format(viewModel.orderState.totalPrice)}"
                    tools:text="204,200원" />

                <TextView
                    android:id="@+id/totalPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/totalPriceTitle"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/couponDiscount"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/couponDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="16dp"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    app:discount="@{viewModel.orderState.discountPrice}"
                    app:layout_constraintBottom_toTopOf="@id/shippingFee"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="-5,000원" />

                <TextView
                    android:id="@+id/couponDiscountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/couponDiscountTitle"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/shippingFee"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/shippingFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="21dp"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:text="@{@string/product_price_format(viewModel.orderState.shippingFee)}"
                    app:layout_constraintBottom_toTopOf="@id/divider2"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="3,000원" />

                <TextView
                    android:id="@+id/shippingFeeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="21dp"
                    android:text="@string/shippingFeeTitle"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/divider2"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_marginBottom="21dp"
                    android:background="@color/gray_eb"
                    app:layout_constraintBottom_toTopOf="@id/finalPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/finalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="76dp"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:text="@{@string/product_price_format(viewModel.orderState.finalPrice)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/finalPriceTitle"
                    tools:text="202,200원" />

                <TextView
                    android:id="@+id/finalPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="76dp"
                    android:text="@string/finalPricetitle"
                    android:textColor="@color/gray_5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/orderButton"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:onClick="@{()->viewModel.proceedOrder()}"
                    android:id="@+id/orderButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mint"
                    android:gravity="center"
                    android:paddingVertical="12dp"
                    android:text="@string/orderProceedTitle"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/coupons"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="10"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    app:layout_constraintTop_toBottomOf="@id/couponDescription"
                    app:layout_constraintBottom_toTopOf="@id/divider1"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                    tools:listitem="@layout/item_coupon" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="711dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
