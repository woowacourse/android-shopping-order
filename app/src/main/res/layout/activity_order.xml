<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="adapter"
            type="woowacourse.shopping.view.order.CouponAdapter" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.view.order.OrderViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.order.OrderActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_toolbar_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_toolbar"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/appbar_order"
            app:layout_constraintBottom_toTopOf="@id/btn_order">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_start"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.04"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_end"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.96"/>

                <TextView
                    android:id="@+id/tv_coupons_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_coupons_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginTop="24dp"/>

                <TextView
                    android:id="@+id/tv_coupons_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/order_coupons_description"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupons_title"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_coupons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_coupon"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:adapter="@{adapter}"
                    tools:itemCount="4"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupons_desc"
                    android:paddingVertical="16dp"/>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/div_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_coupons"/>

                <include
                    android:id="@+id/item_order_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/div_coupons"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    layout="@layout/item_price"
                    app:priceTitle="@{@string/order_order_price}"
                    app:priceAmount="@{@string/price_format(viewModel.orderUiState.orderPrice)}"
                    android:layout_marginTop="12dp"/>

                <include
                    android:id="@+id/item_discount_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item_order_price"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    layout="@layout/item_price"
                    app:priceTitle="@{@string/order_coupon_price}"
                    app:priceAmount="@{@string/price_discount_format(viewModel.orderUiState.discount)}"/>

                <include
                    android:id="@+id/item_shipping_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/item_discount_price"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    layout="@layout/item_price"
                    app:priceTitle="@{@string/order_shipping_price}"
                    app:priceAmount="@{@string/price_format(viewModel.orderUiState.shippingPrice)}"/>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/div_prices"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    app:layout_constraintTop_toBottomOf="@id/item_shipping_price"
                    app:layout_constraintBottom_toTopOf="@id/item_total_price"
                    android:layout_marginTop="12dp"/>

                <include
                    android:id="@+id/item_total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/div_prices"
                    app:layout_constraintStart_toStartOf="@id/guideline_start"
                    app:layout_constraintEnd_toEndOf="@id/guideline_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    layout="@layout/item_price"
                    android:layout_marginVertical="12dp"
                    app:priceTitle="@{@string/order_total_price}"
                    app:priceAmount="@{@string/price_format(viewModel.totalPrice)}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:text="@string/button_order"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:onClick="@{() -> viewModel.makeOrder()}"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
