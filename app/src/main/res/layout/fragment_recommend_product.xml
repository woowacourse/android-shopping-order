<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.presentation.order.recommend.RecommendProductViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_recommend_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="@string/recommend_cart_product_title"
            android:textSize="24sp"
            android:theme="@style/H1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_recommend_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommend_cart_product_description"
            app:layout_constraintStart_toStartOf="@id/tv_recommend_header"
            app:layout_constraintTop_toBottomOf="@id/tv_recommend_header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recommend_products"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_recommend_description"
            tools:itemCount="10"
            tools:listitem="@layout/item_recent_product" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray500"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="@{@string/price_format(vm.uiState.totalPrice)}"
                android:textColor="@color/white"
                android:theme="@style/H1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btn_order"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/price_format" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/mint"
                android:onClick="@{() -> vm.navigateToPayment()}"
                android:paddingHorizontal="16dp"
                android:paddingTop="30dp"
                android:paddingBottom="27dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/order_product_format(vm.uiState.totalCount)}"
                    android:textColor="@color/white"
                    android:theme="@style/H1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/order_product_format" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>