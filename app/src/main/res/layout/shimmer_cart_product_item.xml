<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="12dp"
        android:background="@color/shimmer_gray1">

        <View
            android:id="@+id/textView_cart_product_name"
            android:layout_width="220dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:background="@color/shimmer_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/imageView_cart_product"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:background="@color/shimmer_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/textView_cart_product_name"
            app:layout_constraintTop_toBottomOf="@id/textView_cart_product_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>