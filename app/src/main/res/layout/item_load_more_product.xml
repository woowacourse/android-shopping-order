<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="listener"
            type="woowacourse.shopping.presentation.shopping.product.ProductItemListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_load_more_products"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/mint"
        android:onClick="@{() -> listener.loadProducts()}">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/load_more_products"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:theme="@style/Header_24sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>