<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="clickListener"
            type="woowacourse.shopping.view.cart.listener.QuantityClickListener" />

        <variable
            name="productId"
            type="Integer" />

        <variable
            name="quantity"
            type="Integer" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_quantity_control">

        <ImageButton
            android:id="@+id/button_minus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@android:color/transparent"
            android:onClick="@{() -> clickListener.onQuantityMinusButtonClick(productId)}"
            android:src="@drawable/ic_minus" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/ic_minus"
            android:text="@{String.valueOf(quantity)}"
            android:textColor="@color/gray_500"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:text="1" />

        <ImageButton
            android:id="@+id/button_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@android:color/transparent"
            android:onClick="@{() -> clickListener.onQuantityPlusButtonClick(productId)}"
            android:src="@drawable/ic_plus" />
    </LinearLayout>
</layout>
