<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="woowacourse.shopping.cart.CartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_cart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_cart_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:background="@color/gray_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_cart_order"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_cart_order"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:background="@color/mint_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/view_cart_bottom_bar" />

        <TextView
            style="@style/CartPageOrderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@{@string/format_price(vm.totalPurchaseAmount)}"
            app:layout_constraintBottom_toBottomOf="@id/view_cart_bottom_bar"
            app:layout_constraintEnd_toEndOf="@id/view_cart_bottom_bar"
            app:layout_constraintTop_toTopOf="@id/view_cart_bottom_bar"
            tools:text="184,000원" />

        <TextView
            style="@style/CartPageOrderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/text_order(vm.totalPurchaseCount)}"
            app:layout_constraintBottom_toBottomOf="@id/view_cart_order"
            app:layout_constraintEnd_toEndOf="@id/view_cart_order"
            app:layout_constraintStart_toStartOf="@id/view_cart_order"
            app:layout_constraintTop_toTopOf="@id/view_cart_order"
            android:onClick="@{() -> vm.movePay()}"
            tools:text="주문하기(2)" />

        <CheckBox
            android:id="@+id/checkbox_all_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_12dp"
            android:buttonTint="@color/mint_blue"
            android:checked="@{vm.allChecked}"
            android:foregroundTint="@color/white"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:onClick="@{() -> vm.onAllSelectedProducts()}"
            app:layout_constraintBottom_toBottomOf="@id/textView_all_selection"
            app:layout_constraintStart_toStartOf="@id/view_cart_bottom_bar"
            app:layout_constraintTop_toTopOf="@id/view_cart_bottom_bar" />

        <TextView
            android:id="@+id/textView_all_selection"
            style="@style/CartPageAllSelectionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/total_cart_items"
            app:layout_constraintBottom_toBottomOf="@id/view_cart_bottom_bar"
            app:layout_constraintEnd_toEndOf="@id/checkbox_all_selection"
            app:layout_constraintStart_toStartOf="@id/checkbox_all_selection"
            app:layout_constraintTop_toBottomOf="@id/checkbox_all_selection" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerFrameLayout_cart_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{vm.loadingState ? View.VISIBLE : View.GONE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/shimmer_cart_product_item" />

                <include layout="@layout/shimmer_cart_product_item" />

                <include layout="@layout/shimmer_cart_product_item" />

                <include layout="@layout/shimmer_cart_product_item" />

                <include layout="@layout/shimmer_cart_product_item" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
