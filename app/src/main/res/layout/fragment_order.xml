<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.presentation.view.order.OrderViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Toolbar
            android:id="@+id/toolbar_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_55"
            android:contentInsetStart="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/toolbar_order_title"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/btn_payment"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="80dp">


                <TextView
                    android:id="@+id/order_coupon_title_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/order_available_coupon_title"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/order_coupon_desc_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/order_available_coupon_desc"
                    android:textColor="@color/gray_55"
                    app:layout_constraintStart_toStartOf="@id/order_coupon_title_text_view"
                    app:layout_constraintTop_toBottomOf="@id/order_coupon_title_text_view" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/order_coupon_desc_text_view"
                    tools:listitem="@layout/item_coupon" />


                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider_1"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="30dp"
                    app:dividerColor="@color/gray_88"
                    app:layout_constraintTop_toBottomOf="@id/recycler_view_coupon" />

                <TextView
                    android:id="@+id/order_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/order_order_amount_title"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_1" />

                <TextView
                    android:id="@+id/order_amount_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@{String.valueOf(vm.orderSummary.orderAmount)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/order_amount_title"
                    app:layout_constraintTop_toTopOf="@id/order_amount_title"
                    tools:text="10000원" />

                <TextView
                    android:id="@+id/coupon_discount_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/order_coupon_discount_amount_title"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/order_amount_title"
                    app:layout_constraintTop_toBottomOf="@id/order_amount_title" />

                <TextView
                    android:id="@+id/coupon_discount_amount_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@{String.valueOf(vm.orderSummary.couponAmount)}"
                    app:layout_constraintEnd_toEndOf="@id/order_amount_text_view"
                    app:layout_constraintStart_toEndOf="@id/coupon_discount_amount_title"
                    app:layout_constraintTop_toTopOf="@id/coupon_discount_amount_title"
                    tools:text="10000원" />

                <TextView
                    android:id="@+id/shipping_fee_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/order_shipping_fee_title"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/order_amount_title"
                    app:layout_constraintTop_toBottomOf="@id/coupon_discount_amount_title" />

                <TextView
                    android:id="@+id/shipping_fee_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@{String.valueOf(vm.orderSummary.shippingFee)}"
                    app:layout_constraintEnd_toEndOf="@id/order_amount_text_view"
                    app:layout_constraintStart_toEndOf="@id/shipping_fee_title"
                    app:layout_constraintTop_toTopOf="@id/shipping_fee_title"
                    tools:text="10000원" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider_2"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="20dp"
                    app:dividerColor="@color/gray_88"
                    app:layout_constraintTop_toBottomOf="@id/shipping_fee_title" />

                <TextView
                    android:id="@+id/total_amount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/order_total_amount_title"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_2" />

                <TextView
                    android:id="@+id/total_amount_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray_33"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@{String.valueOf(vm.orderSummary.totalPrice)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/total_amount_title"
                    app:layout_constraintTop_toTopOf="@id/total_amount_title"
                    tools:text="10000원" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


        <TextView
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint"
            android:gravity="center"
            android:paddingVertical="12sp"
            android:text="@string/order_pay_btn_text"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>