<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="cartProduct"
            type="woowacourse.shopping.domain.CartProduct" />

        <variable
            name="productActionHandler"
            type="woowacourse.shopping.presentation.common.ProductClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="@{() -> productActionHandler.onProductClick(cartProduct)}">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            productUrl="@{cartProduct.imgUrl}"
            tools:src="@mipmap/ic_launcher" />

        <include
            layout="@layout/selector_quantity"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            app:cartProduct="@{cartProduct}"
            app:cartCountHandler="@{productActionHandler}"
            android:visibility="@{cartProduct.quantity > 0 ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toBottomOf="@id/img_item"
            app:layout_constraintRight_toRightOf="@id/img_item"/>

        <ImageView
            android:id="@+id/iv_plus"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_white_plus"
            app:layout_constraintBottom_toBottomOf="@id/img_item"
            app:layout_constraintRight_toRightOf="@id/img_item"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="2dp"
            android:onClick="@{() -> productActionHandler.onPlus(cartProduct)}"
            android:visibility="@{cartProduct.quantity == 0 ? View.VISIBLE : View.GONE }"
            />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/img_item"
            app:layout_constraintStart_toStartOf="@id/img_item"
            app:layout_constraintTop_toBottomOf="@id/img_item"
            tools:text="@{cartProduct.name}" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/img_item"
            app:layout_constraintStart_toStartOf="@id/img_item"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:text="@{@string/won(cartProduct.price)}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>