<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="woowacourse.shopping.presentation.model.CatalogItem.ProductItem" />

        <variable
            name="adapterPosition"
            type="int" />

        <variable
            name="eventListener"
            type="woowacourse.shopping.presentation.view.catalog.adapter.CatalogAdapter.CatalogEventListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="@{() -> eventListener.onProductClick(product.productId)}">

        <ImageView
            android:id="@+id/image_view_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray_81"
            android:contentDescription="@null"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/view_quantity_selector"
            layout="@layout/view_quantity_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:visibility="@{product.quantity > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/image_view_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:onDecreaseClick="@{() -> eventListener.decreaseQuantity(product.productId)}"
            app:onIncreaseClick="@{() -> eventListener.increaseQuantity(product.productId)}"
            app:quantity="@{product.quantity}" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_open_quantity_selector"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:background="@drawable/shape_circle_bg"
            android:backgroundTint="@color/white"
            android:elevation="1dp"
            android:onClick="@{() -> eventListener.increaseQuantity(product.productId)}"
            android:src="@drawable/ic_add"
            android:tint="@color/gray_55"
            android:visibility="@{product.quantity > 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/image_view_product"
            app:layout_constraintEnd_toEndOf="@id/image_view_product" />

        <TextView
            android:id="@+id/text_view_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@{product.productName}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_view_product"
            tools:text="나이키 에어포스 1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{String.format(@string/product_price_format, product.price)}"
            android:textColor="@color/gray_55"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/text_view_product_name"
            app:layout_constraintStart_toStartOf="@id/text_view_product_name"
            app:layout_constraintTop_toBottomOf="@id/text_view_product_name"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
