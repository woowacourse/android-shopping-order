<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="productUiModel"
            type="woowacourse.shopping.presentation.products.uimodel.ProductUiModel" />

        <variable
            name="actionHandler"
            type="woowacourse.shopping.presentation.products.ProductCountActionHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:onClick="@{() -> actionHandler.onClickProduct(productUiModel.product.id)}"
            app:imageUrl="@{productUiModel.product.imageUrl}"
            app:layout_constraintBottom_toTopOf="@+id/tv_product_title"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_default_product" />

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{productUiModel.product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            tools:text="PET보틀-정사각형(500ml)" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/product_price(productUiModel.product.price)}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_title"
            tools:text="10,000원" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_products_add_cart"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/shape_product_add_cart_button"
            android:gravity="center"
            android:onClick="@{() -> actionHandler.onClickPlusQuantityButton(productUiModel.product.id)}"
            android:text="@string/plus"
            android:textColor="@color/gray_500"
            android:textSize="30sp"
            app:countPlusVisible="@{productUiModel.quantity.isMin()}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product"
            app:layout_constraintEnd_toEndOf="parent" />

        <include
            android:id="@+id/btn_add_cart_quantity"
            layout="@layout/btn_add_cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:countNum="@{productUiModel.quantity.count}"
            app:countViewVisible="@{productUiModel.quantity.isMin()}"
            app:layout_constraintBottom_toBottomOf="@id/iv_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:onMinusClickListener="@{() -> actionHandler.onClickMinusQuantityButton(productUiModel.product.id)}"
            app:onPlusClickListener="@{() -> actionHandler.onClickPlusQuantityButton(productUiModel.product.id)}"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
