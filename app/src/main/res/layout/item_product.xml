<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="productModel"
            type="woowacourse.shopping.presentation.model.ProductModel" />

        <variable
            name="presenter"
            type="woowacourse.shopping.presentation.productlist.ProductListContract.Presenter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/image_product_list_poster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:imageUrl="@{productModel.imageUrl}"
            app:error="@{@drawable/default_image}"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_product_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:text="@{productModel.name}"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/image_product_list_poster"
            app:layout_constraintStart_toStartOf="@+id/image_product_list_poster"
            app:layout_constraintTop_toBottomOf="@id/image_product_list_poster"
            tools:text="PET보틀-정사각형정사각형" />

        <TextView
            android:id="@+id/text_product_list_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@{@string/price_format(productModel.price)}"
            app:layout_constraintEnd_toEndOf="@+id/text_product_list_name"
            app:layout_constraintStart_toStartOf="@+id/text_product_list_name"
            app:layout_constraintTop_toBottomOf="@id/text_product_list_name"
            tools:text="10,000원" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/button_product_list_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:padding="10dp"
            app:setGoneIfNotZero="@{presenter.cartProductInfoList.findCountByProductId(productModel.id)}"
            android:background="@drawable/round_button_background"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_product_list_poster"
            app:layout_constraintBottom_toBottomOf="@+id/image_product_list_poster" />

        <woowacourse.shopping.presentation.common.CounterView
            android:id="@+id/counter_product_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setGoneIfZero="@{presenter.cartProductInfoList.findCountByProductId(productModel.id)}"
            android:layout_marginBottom="11dp"
            app:layout_constraintEnd_toEndOf="@+id/image_product_list_poster"
            app:layout_constraintStart_toStartOf="@+id/image_product_list_poster"
            app:layout_constraintBottom_toBottomOf="@+id/image_product_list_poster" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
