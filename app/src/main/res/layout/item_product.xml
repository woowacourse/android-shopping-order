<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="product"
            type="woowacourse.shopping.presentation.model.ProductUiModel" />

        <variable
            name="eventListener"
            type="woowacourse.shopping.presentation.view.catalog.CatalogEventListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> eventListener.onProductClicked(product)}">

        <ImageView
            android:id="@+id/image_view_product"
            imageUrl="@{product.imageUrl}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/gray_88"
            android:contentDescription="@null"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_open_select_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/shape_bg_circle"
            android:elevation="5dp"
            android:onClick="@{() -> eventListener.onInitialAddToCartClicked(product)}"
            android:padding="16dp"
            android:src="@drawable/ic_add"
            android:visibility="@{product.quantity != 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/image_view_product"
            app:layout_constraintEnd_toEndOf="@id/image_view_product" />

        <include
            android:id="@+id/category_item_counter"
            layout="@layout/view_select_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="@{product.quantity == 0 ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@id/image_view_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:product="@{product}"
            app:quantity="@{product.quantity}" />


        <TextView
            android:id="@+id/text_view_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@{product.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image_view_product"
            tools:text="나이키 에어포스 1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{String.format(@string/product_price_format, product.price)}"
            android:textColor="@color/gray_55"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/text_view_product_name"
            app:layout_constraintTop_toBottomOf="@id/text_view_product_name"
            tools:text="10,000원" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
