<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="page"
            type="int" />

        <variable
            name="onShoppingCartPaginationListener"
            type="woowacourse.shopping.view.shoppingCart.ShoppingCartPaginationViewHolder.ShoppingCartPaginationClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/shoppingCartPageCountMinusButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/background_shopping_cart_pagination_minus_button"
            android:enabled="false"
            android:gravity="center"
            android:onClick="@{() -> onShoppingCartPaginationListener.onMinusPage()}"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:text="@string/shopping_cart_pagination_minus_button"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/shoppingCartPageCount"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/shoppingCartPageCount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{String.valueOf(page)}"
            android:textColor="@color/gray_5"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/shoppingCartPageCountMinusButton"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/shoppingCartPageCountPlusButton"
            app:layout_constraintStart_toEndOf="@id/shoppingCartPageCountMinusButton"
            app:layout_constraintTop_toTopOf="@id/shoppingCartPageCountMinusButton"
            tools:text="1" />

        <TextView
            android:id="@+id/shoppingCartPageCountPlusButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_shopping_cart_pagination_plus_button"
            android:gravity="center"
            android:onClick="@{() -> onShoppingCartPaginationListener.onPlusPage()}"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"
            android:text="@string/shopping_cart_pagination_plus_button"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/shoppingCartPageCountMinusButton"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shoppingCartPageCount"
            app:layout_constraintTop_toTopOf="@id/shoppingCartPageCountMinusButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
