<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/iv_item_goods_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/cardview_shadow_start_color"
        android:contentDescription="@string/goods_image_description"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_goods_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@color/cardview_shadow_start_color"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@+id/iv_item_goods_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_goods_thumbnail" />

    <TextView
        android:id="@+id/tv_item_goods_price"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintStart_toStartOf="@+id/tv_item_goods_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_goods_name" />

</androidx.constraintlayout.widget.ConstraintLayout>