<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="woowacourse.shopping.presentation.base.LoadingProvider" />


        <variable
            name="vm"
            type="woowacourse.shopping.presentation.ui.payment.PaymentViewModel" />


        <variable
            name="productCountHandler"
            type="woowacourse.shopping.presentation.common.ProductCountHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.payment.PaymentActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="@{vm.error == null ? View.VISIBLE : View.GONE}"
            tools:visibility="visible">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/tv_coupon_title"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/tv_coupon_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/tv_coupon_description_title"
                    app:layout_constraintStart_toStartOf="@+id/tv_coupon_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_coupon_title" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_coupon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:minHeight="260dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="8dp"
                    android:visibility="@{vm.uiState.coupons.size == 0 || vm.loading == LoadingProvider.SKELETON_LOADING  ? View.INVISIBLE : View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_coupon_description"
                    tools:itemCount="2"
                    tools:listitem="@layout/holder_coupon"
                    tools:visibility="visible" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:text="@string/empty_coupon_title"
                    android:textSize="18dp"
                    android:visibility="@{vm.uiState.coupons.size == 0 &amp;&amp; vm.loading == null? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toTopOf="@+id/view_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_coupon_description"
                    tools:visibility="gone" />


                <include
                    layout="@layout/include_skeleton_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:visibility="@{vm.loading == LoadingProvider.SKELETON_LOADING ? View.VISIBLE : View.GONE}"
                    app:layout_constraintBottom_toTopOf="@+id/view_divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_coupon_description"
                    tools:visibility="gone" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="21dp"
                    android:background="@color/gray7"
                    app:layout_constraintTop_toBottomOf="@+id/rv_coupon"
                    tools:layout_editor_absoluteX="16dp" />

                <include
                    android:id="@+id/include_order_amount"
                    layout="@layout/include_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="21dp"
                    app:amount="@{vm.uiState.orderTotalPrice}"
                    app:amountTitle="@{@string/order_amount_title}"
                    app:layout_constraintTop_toBottomOf="@+id/view_divider" />

                <include
                    android:id="@+id/include_discount_amount"
                    layout="@layout/include_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="16dp"
                    android:visibility="@{vm.uiState.couponDiscountPrice == 0 ? View.GONE : View.VISIBLE}"
                    app:amount="@{-vm.uiState.couponDiscountPrice}"
                    app:amountTitle="@{@string/discount_amount_title}"
                    app:layout_constraintTop_toBottomOf="@+id/include_order_amount" />


                <include
                    android:id="@+id/include_delivery_fee_amount"
                    layout="@layout/include_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="16dp"
                    app:amount="@{vm.uiState.DELIVERY_FEE_AMOUNT}"
                    app:amountTitle="@{@string/delivery_fee_amount_title}"
                    app:layout_constraintTop_toBottomOf="@+id/include_discount_amount" />


                <View
                    android:id="@+id/view_divider2"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/gray7"
                    app:layout_constraintTop_toBottomOf="@+id/include_delivery_fee_amount"
                    tools:layout_editor_absoluteX="40dp" />


                <include
                    android:id="@+id/include_total_amount"
                    layout="@layout/include_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="21dp"
                    app:amount="@{vm.uiState.paymentTotalPrice}"
                    app:amountTitle="@{@string/total_amount_title}"
                    app:layout_constraintTop_toBottomOf="@+id/view_divider2" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@+id/include_total_amount" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


        <Button
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green"
            android:gravity="center"
            android:onClick="@{() -> vm.payment()}"
            android:text="@string/tv_payment_title"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="@{vm.error == null ? View.VISIBLE : View.GONE}"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:visibility="visible" />


        <include
            layout="@layout/include_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="20dp"
            app:vm="@{vm}"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
