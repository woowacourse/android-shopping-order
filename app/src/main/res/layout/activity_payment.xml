<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="woowacourse.shopping.presentation.ui.payment.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.payment.PaymentActivity">


        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="적용 가능한 쿠폰"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_coupon_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="* 쿠폰은 1개만 적용 가능합니다"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="#888888" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_sub_title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_first"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:dividerColor="#e8e8e8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_coupon" />


        <TextView
            android:id="@+id/tv_order_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="주문 금액"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/div_first"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_order_price_content" />

        <TextView
            android:id="@+id/tv_order_price_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            orderTotalPrice="@{viewModel.uiState}"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/div_first"
            app:layout_constraintStart_toEndOf="@id/tv_order_price_title"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_discount_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="쿠폰 할인 금액"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_order_price_content" />

        <TextView
            android:id="@+id/tv_discount_price_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            disCountTotalPrice="@{viewModel.uiState}"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price_title"
            app:layout_constraintStart_toEndOf="@id/tv_order_price_title"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_delivery_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="배송비"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_discount_price_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_order_price_content" />

        <TextView
            android:id="@+id/tv_delivery_price_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            deliveryTotalPrice="@{viewModel.uiState}"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_discount_price_title"
            app:layout_constraintStart_toEndOf="@id/tv_delivery_price_title"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/div_second"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            app:dividerColor="#e8e8e8"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_delivery_price_title" />


        <TextView
            android:id="@+id/tv_total_price_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="총 결제 금액"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/div_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_order_price_content" />

        <TextView
            android:id="@+id/tv_total_price_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            paymentTotalPrice="@{viewModel.uiState}"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/div_second"
            app:layout_constraintStart_toEndOf="@id/tv_delivery_price_title"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_price_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
        <TextView
            android:id="@+id/tv_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="결제하기"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#04C09E"
            android:onClick="@{() -> viewModel.pay()}"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>