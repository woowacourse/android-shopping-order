<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="woowacourse.shopping.view.payment.vm.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_payment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.payment.PaymentActivity">

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_final_price"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_shipping_price_title" />

        <TextView
            android:id="@+id/tv_payment_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@string/coupon_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_payment_coupon_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coupon_detail"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_coupon_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payment_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="18dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_coupon_detail"
            tools:listitem="@layout/item_coupon" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_coupons_to_summary"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/rv_payment_coupon" />

        <TextView
            android:id="@+id/tv_payment_order_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_title"
            android:layout_marginStart="18dp"
            android:layout_marginTop="21dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_coupons_to_summary" />

        <TextView
            android:id="@+id/tv_payment_discount_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_coupon_title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_order_price_title" />

        <TextView
            android:id="@+id/tv_payment_shipping_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shipping_title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_discount_price_title" />

        <TextView
            android:id="@+id/tv_payment_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="16dp"
            android:text="@{@string/format_thousand_won(vm.paymentUiState.paymentUi.orderPrice)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_coupons_to_summary"
            tools:text="10,000원"/>

        <TextView
            android:id="@+id/tv_payment_discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="16dp"
            android:text="@{@string/format_thousand_won(vm.paymentUiState.paymentUi.discountPrice)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_order_price"
            tools:text="10,000원" />

        <TextView
            android:id="@+id/tv_payment_shipping_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="16dp"
            android:text="@{@string/format_thousand_won(vm.paymentUiState.paymentUi.shippingPrice)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_payment_discount_price"
            tools:text="10,000원" />

        <TextView
            android:id="@+id/tv_payment_total_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_payment_title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="18dp"
            android:layout_marginTop="21dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_final_price" />

        <TextView
            android:id="@+id/tv_payment_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="21dp"
            android:text="@{@string/format_thousand_won(vm.paymentUiState.paymentUi.totalPrice)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_final_price"
            tools:text="10,000원" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:onClick="@{() -> vm.onClickOrder()}"
            android:text="@string/payment_text"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/turquoise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
