<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="woowacourse.shopping.feature.payment.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".feature.payment.PaymentActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="68dp">

                <TextView
                    android:id="@+id/tv_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="18dp"
                    android:text="@string/payment_usable_coupon_title"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_coupon_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/payment_usable_coupon_description"
                    android:textSize="12sp"
                    android:textColor="@color/gray_700"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupon_title"
                    app:layout_constraintStart_toStartOf="@id/tv_coupon_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:couponItems="@{viewModel.coupons}"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupon_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:listitem="@layout/item_coupon" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider_bottom_of_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="31dp"
                    app:layout_constraintTop_toBottomOf="@id/rv_coupons" />

                <TextView
                    android:id="@+id/tv_order_price_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginStart="18dp"
                    android:text="@string/payment_order_price_title"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider_bottom_of_coupon"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="18dp"
                    android:text="@{@string/payment_price(viewModel.price.orderPrice)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider_bottom_of_coupon"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="204,200원" />

                <TextView
                    android:id="@+id/tv_coupon_discount_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/payment_coupon_discount_title"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_price_title"
                    app:layout_constraintStart_toStartOf="@id/tv_order_price_title" />

                <TextView
                    android:id="@+id/tv_coupon_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:text="@{@string/payment_discount_price(viewModel.price.discountPrice)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="-5,000원" />

                <TextView
                    android:id="@+id/tv_shipping_fee_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/payment_shipping_title"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupon_discount_title"
                    app:layout_constraintStart_toStartOf="@id/tv_order_price_title" />

                <TextView
                    android:id="@+id/tv_shipping_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:text="@{@string/payment_price(viewModel.price.shippingFee)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupon_discount"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="3,000원" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider_bottom_of_payment_description"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="21dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_shipping_fee_title" />

                <TextView
                    android:id="@+id/tv_total_payment_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="@string/payment_total_payment_title"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider_bottom_of_payment_description"
                    app:layout_constraintStart_toStartOf="@id/tv_order_price_title" />

                <TextView
                    android:id="@+id/tv_total_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="18dp"
                    android:text="@{@string/payment_price(viewModel.price.totalPrice)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/divider_bottom_of_payment_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="202,200원" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="0dp"
            android:background="@color/baemin_mint"
            android:gravity="center"
            android:text="@string/payment_order_button"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:onClick="@{() -> viewModel.order()}"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>