<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <data>

        <variable
            name="viewModel"
            type="woowacourse.shopping.ui.payment.PaymentViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.payment.PaymentActivity">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/paymentInfoScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paymentInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.payment.PaymentActivity">

                <TextView
                    android:id="@+id/availableCouponsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/available_coupons_title"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/availableCouponsDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:layout_marginStart="18dp"
                    android:text="@string/available_coupons_description"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/couponContainer"
                    app:layout_constraintTop_toBottomOf="@+id/availableCouponsTitle"
                    tools:layout_editor_absoluteX="18dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/couponContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toTopOf="@id/dividerAfterCoupon"
                    app:layout_constraintTop_toBottomOf="@id/availableCouponsDescription"
                    app:layout_constraintTop_toTopOf="@+id/availableCouponsDescription" />

                <View
                    android:id="@+id/dividerAfterCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginVertical="18dp"
                    android:background="@drawable/bg_payment_gray_3_7dp"
                    app:layout_constraintTop_toBottomOf="@+id/couponContainer" />


                <TextView
                    android:id="@+id/orderPriceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/order_price"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toTopOf="@id/couponDiscountPriceText"
                    app:layout_constraintEnd_toStartOf="@id/orderPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividerAfterCoupon" />

                <TextView
                    android:id="@+id/orderPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="end"
                    android:text="@{@string/payment_price(viewModel.uiState.orderPrice)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/couponDiscountPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/orderPriceText"
                    app:layout_constraintTop_toBottomOf="@id/dividerAfterCoupon"
                    tools:text="204,200원" />

                <TextView
                    android:id="@+id/couponDiscountPriceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginStart="18dp"
                    android:text="@string/coupon_discount_price"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/deliveryPriceText"
                    app:layout_constraintEnd_toStartOf="@id/couponDiscountPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/orderPriceText" />

                <TextView
                    android:id="@+id/couponDiscountPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="end"
                    android:text="@{@string/payment_price(viewModel.uiState.couponDiscount)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toTopOf="@id/deliveryPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/couponDiscountPriceText"
                    app:layout_constraintTop_toBottomOf="@id/orderPrice"
                    tools:text="204,200원" />

                <TextView
                    android:id="@+id/deliveryPriceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginBottom="21dp"
                    android:text="@string/delivery_price"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/dividerAfterPrice"
                    app:layout_constraintEnd_toStartOf="@+id/deliveryPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/couponDiscountPriceText" />

                <TextView
                    android:id="@+id/deliveryPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="21dp"
                    android:gravity="end"
                    android:text="@{@string/payment_price(viewModel.uiState.deliveryPrice)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/dividerAfterPrice"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/deliveryPriceText"
                    app:layout_constraintTop_toBottomOf="@id/couponDiscountPrice"
                    tools:text="204,200원" />

                <View

                    android:id="@+id/dividerAfterPrice"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@drawable/bg_payment_gray_3_7dp"
                    app:layout_constraintBottom_toTopOf="@id/totalPaymentAmountText"
                    app:layout_constraintTop_toBottomOf="@+id/deliveryPrice" />

                <TextView
                    android:id="@+id/totalPaymentAmountText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="21dp"
                    android:text="@string/total_payment_amount"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/totalPaymentAmount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dividerAfterPrice" />

                <TextView
                    android:id="@+id/totalPaymentAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="end"
                    android:text="@{@string/payment_price(viewModel.uiState.totalPaymentAmount)}"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/totalPaymentAmountText"
                    app:layout_constraintTop_toBottomOf="@id/dividerAfterPrice"
                    tools:text="204,200원"


                    />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/payButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:background="@color/mint_1"
            android:paddingVertical="12dp"
            android:onClick="@{() -> viewModel.onPayClick()}"
            android:text="@string/pay_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
