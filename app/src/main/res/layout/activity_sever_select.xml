<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeverSelectActivity">


    <TextView
        android:text="@string/server_select_message"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_select_server"
        app:layout_constraintBottom_toTopOf="@id/btn_jerry_server"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:text="@string/jerry_server"
        android:background="@color/primary"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btn_gitjjang_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_jerry_server"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_select_server"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:text="@string/gitjjang_server"
        android:layout_width="wrap_content"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn_hoi_server"
        android:layout_height="wrap_content"
        android:id="@+id/btn_gitjjang_server"
        android:textSize="16sp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_jerry_server"
        app:layout_constraintStart_toStartOf="@id/btn_jerry_server"
        app:layout_constraintEnd_toEndOf="@id/btn_jerry_server" />

    <Button
        android:text="@string/hoi_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/btn_hoi_server"
        android:background="@color/primary"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingHorizontal="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_gitjjang_server"
        app:layout_constraintStart_toStartOf="@id/btn_jerry_server"
        app:layout_constraintEnd_toEndOf="@id/btn_jerry_server" />
</androidx.constraintlayout.widget.ConstraintLayout>