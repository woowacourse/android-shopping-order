<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderProduct"
            type="woowacourse.shopping.model.OrderProductUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/sale_info_box"
        android:layout_marginBottom="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/order_result_item_title"
            android:text="@{orderProduct.productUiModel.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tool:text="[든든] 동원 스위트콘"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/order_result_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            imgUrl="@{orderProduct.productUiModel.imgUrl}"
            android:contentDescription="@string/order_detail_item_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/order_result_item_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/center_guideline"
            android:layout_marginEnd="30dp"
            tool:src="@mipmap/ic_launcher_round"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="2:1" />

        <TextView
            android:text="@{@string/count_format(orderProduct.productUiModel.count)}"
            android:id="@+id/order_product_count_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@id/order_product_per_money"
            tool:text="2개" />

        <TextView
            android:text="@{@string/price_format(orderProduct.productUiModel.toMoneyFormat())}"
            android:id="@+id/order_product_per_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="99,800원"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>