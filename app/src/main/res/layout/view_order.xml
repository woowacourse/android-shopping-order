<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="totalPrice"
            type="int" />

        <variable
            name="totalCount"
            type="int" />

        <variable
            name="isShowCheckBox"
            type="boolean" />

        <variable
            name="isCheckedAll"
            type="boolean" />
        <variable
            name="orderUiEvent"
            type="woowacourse.shopping.presentation.view.order.OrderUiEventListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_55">

        <CheckBox
            android:id="@+id/checkbox_select_all"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/selector_checkbox"
            android:button="@null"
            android:checked="@{isCheckedAll}"
            app:layout_constraintBottom_toTopOf="@id/text_view_checkbox_title"
            app:layout_constraintEnd_toStartOf="@id/text_view_total_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/text_view_checkbox_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_checkbox_title"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/checkbox_select_all"
            app:layout_constraintStart_toStartOf="@id/checkbox_select_all"
            app:layout_constraintTop_toBottomOf="@id/checkbox_select_all" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_order"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/mint"
            android:enabled="@{totalCount &lt;= 0 ? false : true}"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="@{@string/order_count_text_format(totalCount)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:onClick="@{() -> orderUiEvent.order()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_view_total_price"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="주문하기(2)" />

        <TextView
            android:id="@+id/text_view_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="25dp"
            android:text="@{@string/cart_item_price_format(totalPrice)}"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_order"
            app:layout_constraintStart_toEndOf="@id/checkbox_select_all"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="184,200원" />

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{isShowCheckBox ? View.VISIBLE : View.GONE}"
            app:constraint_referenced_ids="checkbox_select_all,text_view_checkbox_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>