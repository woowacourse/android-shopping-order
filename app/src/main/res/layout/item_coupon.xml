<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="coupon"
            type="woowacourse.shopping.presentation.model.CouponUiModel" />

        <variable
            name="listener"
            type="woowacourse.shopping.presentation.view.order.coupon.CouponAdapter.SelectCouponListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_cart_item"
        android:minHeight="120dp">

        <CheckBox
            android:id="@+id/coupon_select_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:checked="@{coupon.isSelected}"
            android:onClick="@{() -> listener.onSelectCoupon(coupon)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{coupon.description}"
            android:textColor="@color/gray_55"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/coupon_select_checkbox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/coupon_select_checkbox"
            app:layout_constraintTop_toTopOf="@id/coupon_select_checkbox"
            tools:text="쿠폰 이름" />

        <TextView
            android:id="@+id/coupon_expiration_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{String.format(@string/coupon_expiration_date_text,coupon.expirationDate)}"
            app:layout_constraintTop_toBottomOf="@id/coupon_select_checkbox"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/coupon_minimum_order_amount_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:text="@{String.format(@string/coupon_minimum_order_amount_text,coupon.minimumOrderAmount)}"
            android:visibility="@{coupon.minimumOrderAmount == null ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/coupon_expiration_date_text_view"
            app:layout_constraintTop_toBottomOf="@id/coupon_expiration_date_text_view"
            tools:text="최소 주문 금액: 100,000원" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>