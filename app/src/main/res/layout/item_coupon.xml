<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="coupon"
            type="woowacourse.shopping.data.payment.model.Coupon" />

        <variable
            name="vm"
            type="woowacourse.shopping.presentation.payment.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="324dp"
        android:layout_height="104dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_retangular_5"
        android:onClick="@{() -> vm.toggleCouponCheckBox(coupon)}">

        <CheckBox
            android:id="@+id/cb_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:checked="@{coupon.isSelected}"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@{coupon.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/cb_coupon"
            app:layout_constraintTop_toTopOf="@id/cb_coupon"
            tools:text="5000원 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_deadline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_name"
            android:text="만료일:  "/>

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{coupon.expirationDate}"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/tv_deadline_text"
            app:layout_constraintTop_toTopOf="@id/tv_deadline_text"
            tools:text="2024년 11월 30일" />

        <TextView
            minimumAmount="@{coupon.minimumAmount}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/cb_coupon"
            app:layout_constraintTop_toBottomOf="@id/tv_deadline"
            tools:text="최소 주문 금액 : 100,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>