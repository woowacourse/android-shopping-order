<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="couponId"
            type="Long" />

        <variable
            name="CouponClickListener"
            type="woowacourse.shopping.ui.coupon.uimodel.CouponClickListener" />

        <variable
            name="isChecked"
            type="Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rect_gray6_line_1"
        android:paddingHorizontal="15dp"
        android:paddingVertical="18dp">

        <CheckBox
            android:id="@+id/chb_coupon_item_check"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/checkbox"
            android:button="@null"
            android:checked="@{isChecked}"
            android:onClick="@{() -> CouponClickListener.onCheckBoxClicked(couponId)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="true" />

        <TextView
            android:id="@+id/tv_coupon_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:textColor="@color/gray5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/chb_coupon_item_check"
            app:layout_constraintStart_toEndOf="@id/chb_coupon_item_check"
            app:layout_constraintTop_toTopOf="@id/chb_coupon_item_check"
            tools:text="5,000원 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_coupon_item_expire_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_item_title"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/tv_coupon_item_minimum_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_item_expire_date"
            tools:text="최소 주문 금액: 100,000원" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_item_minimum_order_price"
            tools:text="적용 가능 시간: 04:00 ~ 07:00" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
