<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="couponModel"
            type="woowacourse.shopping.presentation.ui.CouponModel" />

        <variable
            name="handler"
            type="woowacourse.shopping.presentation.ui.payment.PaymentHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/radius_4_strock"
        android:onClick="@{()->handler.onCouponClicked(couponModel)}"
        android:padding="18dp">

        <CheckBox
            android:id="@+id/check_box_coupon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:onClick="@{()->handler.onCouponClicked(couponModel)}"
            android:checked="@{couponModel.isChecked}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{couponModel.coupon.description}"
            android:textColor="@color/dark_grey"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/check_box_coupon"
            app:layout_constraintTop_toTopOf="@id/check_box_coupon"
            tools:text="다 깎아주는 쿠폰" />

        <TextView
            android:id="@+id/tv_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{couponModel.coupon.expirationDate.toString()}"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_title" />

        <TextView
            android:id="@+id/tv_minumum_order_price"
            bindCouponDetail="@{couponModel.coupon}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_end_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>