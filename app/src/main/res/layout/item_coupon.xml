<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shopping="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="woowacourse.shopping.domain.model.Coupon.Fixed" />

        <import type="woowacourse.shopping.domain.model.Coupon.FreeShipping" />

        <variable
            name="couponItemClickListener"
            type="woowacourse.shopping.view.order.CouponItemClickListener" />

        <variable
            name="couponItem"
            type="woowacourse.shopping.view.order.CouponViewItem.CouponItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/shopping_cart_item_gridview">

        <CheckBox
            android:id="@+id/checkbox_coupon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:checked="@{couponItem.isSelected}"
            android:onCheckedChanged="@{(view, isChecked) -> couponItemClickListener.changeCouponSelection(isChecked, couponItem.coupon.id)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="true" />

        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:text="@{couponItem.coupon.description}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_coupon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_coupon"
            app:layout_constraintTop_toTopOf="@id/checkbox_coupon"
            tools:text="5,000원 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_expiration_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_coupon_title"
            app:layout_constraintStart_toStartOf="@id/checkbox_coupon"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_title"
            shopping:expirationDate="@{couponItem.coupon.expirationDate}"
            tools:text="만료일: 2024년 12월 30일" />

        <TextView
            android:id="@+id/tv_minimum_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tv_coupon_title"
            app:layout_constraintStart_toStartOf="@id/checkbox_coupon"
            app:layout_constraintTop_toBottomOf="@id/tv_expiration_date"
            shopping:minimumExpense="@{couponItem}"
            tools:text="최소 주문 금액: 100,000원"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
