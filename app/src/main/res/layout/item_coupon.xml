<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="coupon"
            type="woowacourse.shopping.presentation.common.model.CouponUiModel" />

        <variable
            name="eventListener"
            type="woowacourse.shopping.presentation.view.payment.adapter.CouponAdapter.CouponEventListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_cart_item"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp">

        <CheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/selector_checkbox"
            android:button="@null"
            android:checked="@{coupon.isSelected}"
            android:onClick="@{() -> eventListener.onSelectCoupon(coupon.id)}"
            app:layout_constraintBottom_toBottomOf="@id/text_view_coupon_description"
            app:layout_constraintEnd_toStartOf="@id/text_view_coupon_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_coupon_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{coupon.description}"
            android:textColor="@color/gray_55"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/checkbox_select"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5,000원 할인 쿠폰" />

        <TextView
            android:id="@+id/text_view_expired_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{coupon.formatedExpiredDate(@string/coupon_expired_date_format)}"
            android:textColor="@color/gray_55"
            app:layout_constraintTop_toBottomOf="@id/text_view_coupon_description"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/text_view_minimum_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{String.format(@string/coupon_minimum_amount_format, coupon.minimumAmount)}"
            android:textColor="@color/gray_55"
            android:visibility="@{coupon.isShowMinimumAmount() ? View.VISIBLE : View.INVISIBLE }"
            app:layout_constraintTop_toBottomOf="@id/text_view_expired_date"
            tools:text="최소 주문 금액: 100,000원" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
