<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="coupon"
            type="woowacourse.shopping.presentation.order.payment.CouponUiModel" />

        <variable
            name="listener"
            type="woowacourse.shopping.presentation.order.payment.CouponClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_border"
        android:onClick="@{() -> listener.toggleCoupon(coupon.id)}"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:checked="@{coupon.isSelected}"
                android:enabled="false" />

            <TextView
                android:id="@+id/tv_cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{coupon.name}"
                android:textColor="@color/gray500"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="5000원 할인 쿠폰" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{@string/coupon_date(coupon.expirationDate)}"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/minimumAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="18dp"
            android:text="@{@string/min_available_coupon_price(coupon.minimumPrice)}"
            tools:text="최소 주문 금액: 1,000원" />
    </LinearLayout>
</layout>