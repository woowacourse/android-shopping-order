<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="couponState"
            type="woowacourse.shopping.view.order.CouponState" />

        <variable
            name="couponClickListener"
            type="woowacourse.shopping.view.order.CouponClickListener" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="2dp"
        android:background="@drawable/background_shopping_cart_product"
        android:onClick="@{() -> couponClickListener.onCouponClick(couponState)}">

        <CheckBox
            android:clickable="false"
            android:checked="@{couponState.selected}"
            android:id="@+id/couponCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemCouponTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@{couponState.title}"
            app:layout_constraintBottom_toBottomOf="@id/couponCheckbox"
            app:layout_constraintStart_toEndOf="@id/couponCheckbox"
            app:layout_constraintTop_toTopOf="@id/couponCheckbox"
            tools:text="5,000원 할인 쿠폰 " />

        <TextView
            android:id="@+id/couponExpiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/gray_5"
            android:textSize="12sp"
            android:textStyle="normal"
            app:expirationDate="@{couponState.expirationDate}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/couponCheckbox"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:visibility="@{couponState.minimumOrderPrice != null ? View.VISIBLE : View.GONE}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/gray_5"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="@{@string/couponMinimumOrderPrice(couponState.minimumOrderPrice)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/couponExpiration"
            tools:text="최소 주문 금액: 100,000원" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
