<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="onClickCoupon"
            type="woowacourse.shopping.view.order.adapter.OnClickCoupon" />

        <variable
            name="coupon"
            type="woowacourse.shopping.view.order.model.CouponUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape_border"
        android:onClick="@{() -> onClickCoupon.applyCoupon(coupon)}">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:checked="@{coupon.isSelected}"
            android:clickable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{coupon.description}"
            android:textColor="@color/gray_5"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/checkBox"
            app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintTop_toTopOf="@+id/checkBox"
            app:layout_constraintVertical_bias="0.4"
            tools:text="5,000원 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_expiration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="@{@string/expiration_date(coupon.expirationDate)}"
            android:textColor="@color/gray_5"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/checkBox"
            tools:text="쿠폰 어쩌구 조건 1" />

        <TextView
            android:id="@+id/tv_minimum_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:visibility="@{coupon.minimumAmount > 0 ? View.VISIBLE : View.GONE}"
            android:text="@{@string/minimum_order_amount(coupon.minimumAmount)}"
            android:textColor="@color/gray_5"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/tv_expiration_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_expiration_date"
            tools:text="쿠폰 어쩌구 조건 2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
