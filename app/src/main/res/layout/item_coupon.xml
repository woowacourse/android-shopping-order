<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="coupon"
            type="woowacourse.shopping.domain.model.coupon.Coupon" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.feature.cart.CartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cart_item_background">


        <CheckBox
            android:id="@+id/checkBox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginBottom="14dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="0dp"
            android:checked="@{coupon.isSelected}"
            android:onClick="@{() -> viewModel.toggleCouponCheck(coupon)}"
            app:layout_constraintBottom_toTopOf="@+id/tv_coupon_item_expire_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_coupon_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{coupon.description}"
            android:textColor="@color/gray_800"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_coupon_item_expire_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/checkBox_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="5000원 할인 쿠폰" />

        <TextView
            android:id="@+id/tv_coupon_item_expire_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:textColor="@color/gray_800"
            android:textSize="12sp"
            app:couponExpireDateText="@{coupon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/tv_coupon_item_minimum_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/gray_800"
            android:textSize="12sp"
            app:couponMinimumAmountText="@{coupon}"
            app:layout_constraintStart_toStartOf="@+id/tv_coupon_item_expire_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_coupon_item_expire_date"
            tools:text="최소 주문 금액: 100,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>