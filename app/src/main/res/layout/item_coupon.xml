<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="woowacourse.shopping.presentation.order.CouponClickListener" />

        <variable
            name="couponUiModel"
            type="woowacourse.shopping.presentation.uimodel.CouponUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_coupon_item"
        android:paddingHorizontal="12dp"
        android:paddingBottom="12dp">

        <CheckBox
            android:id="@+id/checkbox_coupon_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/baemin"
            android:onClick="@{()->clickListener.onClickSelect(couponUiModel.id)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:checked="true" />

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{couponUiModel.description}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_coupon_item"
            app:layout_constraintStart_toEndOf="@id/checkbox_coupon_item"
            app:layout_constraintTop_toTopOf="@id/checkbox_coupon_item"
            tools:text="2개 구매 시 1개 무료 쿠폰" />

        <TextView
            android:id="@+id/tv_expired_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/checkbox_coupon_item"
            app:layout_constraintTop_toBottomOf="@id/checkbox_coupon_item"
            tools:text="만료일: 2024년 11월 30일" />

        <TextView
            android:id="@+id/tv_minimum_order_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tv_expired_date"
            app:layout_constraintTop_toBottomOf="@id/tv_expired_date"
            tools:text="최소 주문 금액: 100,000원" />

        <TextView
            android:id="@+id/tv_available_using_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/tv_expired_date"
            app:layout_constraintTop_toBottomOf="@id/tv_expired_date"
            tools:text="사용 가능 시간: 오전 4시부터 7시까지" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
