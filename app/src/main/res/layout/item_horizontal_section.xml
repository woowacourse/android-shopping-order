<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.feature.goods.GoodsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/recently_viewed_goods_header"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="@{viewModel.recentlyViewedGoods.size > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:visibility="@{viewModel.recentlyViewedGoods.size > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="32dp"
            android:background="@color/gray_200"
            android:visibility="@{viewModel.recentlyViewedGoods.size > 0 ? View.VISIBLE : View.GONE}"
            app:layout_constraintTop_toBottomOf="@id/horizontalRecycler" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
