<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="orderDate"
            type="java.lang.String" />
        <variable
            name="orderPrice"
            type="java.lang.Integer" />

        <variable
            name="usedPoint"
            type="java.lang.Integer" />

        <variable
            name="savedPoint"
            type="java.lang.Integer" />

        <variable
            name="totalPrice"
            type="java.lang.Integer" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_order_detail_date_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_detail_date_title_info_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_order_detail_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                setText="@{orderDate}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_detail_date_title_info"
                tools:text="2022-03-16" />

            <View
                android:id="@+id/view_line_order_detail1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/product_view_line_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_detail_date" />

            <TextView
                android:id="@+id/tv_order_detail_product_list_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/order_detail_product_list_title_info_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_order_detail1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_order_detail_product_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintDimensionRatio="W, 2:2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_detail_product_list_title_info"
                tools:listitem="@layout/item_order_product_list" />

            <View
                android:id="@+id/view_line_order_detail2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:background="@color/product_view_line_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_order_detail_product_list" />

            <TextView
                android:id="@+id/tv_order_detail_payment_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/order_detail_payment_title_info_text"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_line_order_detail2" />

            <TextView
                android:id="@+id/tv_order_detail_payment_order_price_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/order_detail_payment_order_price_title_info_text"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_detail_payment_title_info" />

            <TextView
                android:id="@+id/tv_order_detail_payment_order_price"
                setPrice="@{orderPrice}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="middle"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_order_detail_payment_order_price_title_info"
                app:layout_constraintTop_toTopOf="@id/tv_order_detail_payment_order_price_title_info"
                tools:text="10,000원" />

            <TextView
                android:id="@+id/tv_order_detail_payment_use_point_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/order_detail_payment_use_point_title_info_text"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_detail_payment_order_price" />

            <TextView
                android:id="@+id/tv_order_detail_payment_use_point"
                setPrice="@{usedPoint}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="middle"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_order_detail_payment_use_point_title_info"
                app:layout_constraintTop_toTopOf="@id/tv_order_detail_payment_use_point_title_info"
                tools:text="1,000원" />

            <TextView
                android:id="@+id/tv_order_detail_payment_save_point_title_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/order_detail_payment_save_point_title_info_text"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_order_detail_payment_use_point_title_info" />

            <TextView
                android:id="@+id/tv_order_detail_payment_save_point"
                setPrice="@{savedPoint}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="middle"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/order_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_order_detail_payment_save_point_title_info"
                app:layout_constraintTop_toTopOf="@id/tv_order_detail_payment_save_point_title_info"
                tools:text="100원" />

            <LinearLayout
                android:id="@+id/layout_order_detail_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/main_color"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_order_detail_payment_save_point_title_info">

                <TextView
                    android:id="@+id/tv_order_detail_payment_total_price_title_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_detail_payment_total_price_title_info_text"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_order_detail_payment_total_price"
                    setPrice="@{totalPrice}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="middle"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="9,000원" />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
