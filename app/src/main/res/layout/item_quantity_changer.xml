<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cartId"
            type="long" />

        <variable
            name="quantity"
            type="int" />

        <variable
            name="eventHandler"
            type="woowacourse.shopping.view.core.handler.CartQuantityHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/product_quantity_background">

        <ImageView
            android:id="@+id/image_view_minus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="12dp"
            android:src="@drawable/ic_minus"
            android:onClick="@{() -> eventHandler.onClickDecrease(cartId)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cart_count"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="@{String.valueOf(quantity)}"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_view_minus"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_view_plus"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="12dp"
            android:src="@drawable/ic_add"
            android:onClick="@{() -> eventHandler.onClickIncrease(cartId)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_cart_count"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
