<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recentMoreWatchingClickListener"
            type="woowacourse.shopping.view.product.RecentProductViewHolder.ProductRecentMoreWatchingClickListener" />

        <variable
            name="productItem"
            type="woowacourse.shopping.view.product.ProductsItem.ProductItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> recentMoreWatchingClickListener.onRecentProductClick(productItem)}"
        android:paddingEnd="8dp"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:id="@+id/recentWatchingImage"
            android:layout_width="98dp"
            android:layout_height="0dp"
            app:imageUrl="@{productItem.product.imageUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recentWatchingName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{productItem.product.name}"
            android:textColor="@color/gray_3"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/recentWatchingImage"
            app:layout_constraintStart_toStartOf="@id/recentWatchingImage"
            app:layout_constraintTop_toBottomOf="@id/recentWatchingImage"
            tools:text="매우매우매우매우매우매우매우매우매우매우긴" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
