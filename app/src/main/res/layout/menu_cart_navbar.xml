<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.feature.goods.GoodsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:onClick="@{() -> viewModel.onCartClicked()}"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/nav_cart_icon_title"
            android:src="@drawable/ic_shopping_cart" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.totalCartItemSize.equals(`0`) ? View.GONE : View.VISIBLE}"
            app:cardCornerRadius="100dp">

            <TextView
                android:id="@+id/badge_count"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@color/cyan"
                android:gravity="center"
                android:padding="3dp"
                android:text="@{viewModel.totalCartItemSize}"
                android:textColor="@color/white"
                android:textSize="@{viewModel.totalCartItemSize.equals(`99+`) ? @dimen/nav_cart_text_small : @dimen/nav_cart_text_normal}"
                tools:text="99" />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>
