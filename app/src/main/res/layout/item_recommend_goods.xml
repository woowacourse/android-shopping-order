<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="quantityChangeListener"
            type="woowacourse.shopping.feature.QuantityChangeListener" />

        <variable
            name="cartItem"
            type="woowacourse.shopping.domain.model.CartItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="6dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/iv_item_goods_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/goods_image_description"
            app:imgUrl="@{cartItem.goods.thumbnailUrl}"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/ic_launcher_background" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_goods_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/iv_item_goods_thumbnail">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_plus_quantity_round"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="0dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:onClick="@{() -> quantityChangeListener.onIncrease(cartItem)}"
                android:stateListAnimator="@null"
                android:text="+"
                android:textColor="@color/gray_700"
                android:textSize="30sp"
                android:visibility="@{cartItem.quantity &lt;= 0 ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="@{cartItem.quantity > 0 ? View.VISIBLE : View.GONE}"
            app:cardCornerRadius="5dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_item_goods_thumbnail"
            app:layout_constraintEnd_toEndOf="@+id/iv_item_goods_thumbnail"
            app:layout_constraintStart_toStartOf="@+id/iv_item_goods_thumbnail"

            tools:alpha="0.5"
            tools:visibility="visible">

            <include
                android:id="@+id/quantitySelector"
                layout="@layout/quantity_selector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cartItem="@{cartItem}"
                app:quantityChangeListener="@{quantityChangeListener}" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartItem.goods.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_item_goods_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_goods_thumbnail"
            tools:text="PET보틀-정사각형-매우긴이름매우긴이름매우긴이름" />

        <TextView
            android:id="@+id/tv_item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/amount(cartItem.goods.price)}"
            android:textColor="@color/gray_800"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_item_goods_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_goods_name"
            tools:text="10,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>