<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartItem"
            type="woowacourse.shopping.domain.model.CartItem" />

        <variable
            name="cartPageClickListener"
            type="woowacourse.shopping.presentation.cart.CartPageClickListener" />

        <variable
            name="counterClickListener"
            type="woowacourse.shopping.presentation.cart.CartCounterClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_cart_item"
        android:paddingHorizontal="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/tv_cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@{cartItem.product.name}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="맥심 마일드" />

        <ImageView
            android:id="@+id/iv_cart_product"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:scaleType="center"
            app:imageUrl="@{cartItem.product.imageUrl}"
            app:layout_constraintStart_toStartOf="@id/tv_cart_product_name"
            app:layout_constraintTop_toBottomOf="@id/tv_cart_product_name"
            tools:src="@drawable/ic_launcher_background" />

        <ImageButton
            android:id="@+id/ib_cart_product_delete"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@null"
            android:onClick="@{() -> cartPageClickListener.onClickDelete(cartItem)}"
            android:src="@drawable/ic_delete"
            app:layout_constraintBottom_toBottomOf="@id/tv_cart_product_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_cart_product_name" />

        <include
            android:id="@+id/included_layout_cart"
            layout="@layout/layout_cart_quantity_box"
            android:layout_width="140dp"
            android:layout_height="44dp"
            app:clickListener="@{counterClickListener}"
            app:id="@{cartItem.product.productId}"
            app:layout_constraintEnd_toEndOf="@id/tv_cart_product_price"
            app:layout_constraintTop_toTopOf="@id/iv_cart_product"
            app:quantity="@{cartItem.quantity}" />

        <TextView
            android:id="@+id/tv_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@{@string/cart_product_price(cartItem.totalPrice)}"
            android:textColor="@color/gray5"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_cart_product"
            app:layout_constraintEnd_toEndOf="@id/ib_cart_product_delete"
            tools:text="100,000원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
