<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.presentation.product.catalog.ProductUiModel" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />
    </data>

    <FrameLayout
        android:layout_width="53dp"
        android:layout_height="53dp">

        <ImageButton
            android:id="@+id/button_open_quantity_layout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/cart_product_open_button_background"
            android:clickable="true"
            android:contentDescription="@string/text_product_count_open_button"
            android:elevation="5dp"
            android:onClick="@{onClick}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_product_count"
            app:tint="@color/black" />
    </FrameLayout>
</layout>