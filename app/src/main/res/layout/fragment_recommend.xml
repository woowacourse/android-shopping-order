<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.cart.recommend.RecommendFragment">

    <TextView
        android:id="@+id/tv_recommend_items_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_recommend_items_description"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="이런 상품은 어떠세요?" />

    <TextView
        android:id="@+id/tv_recommend_items_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="29dp"
        android:textColor="@color/gray_800"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/rv_recommend_items"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="* 최근 본 상품 기반으로 좋아하실 것 같은 상품들을 추천해드려요." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recommend_items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_goods" />

    <include
        android:id="@+id/bottom_bar"
        layout="@layout/cart_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>