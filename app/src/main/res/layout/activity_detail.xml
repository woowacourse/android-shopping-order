<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="woowacourse.shopping.presentation.product.detail.DetailViewModel" />

        <variable
            name="handler"
            type="woowacourse.shopping.presentation.product.ProductQuantityHandler" />

        <variable
            name="detailHandler"
            type="woowacourse.shopping.presentation.product.detail.event.DetailEventHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".presentation.product.detail.DetailActivity">

                <ImageView
                    android:id="@+id/imageView_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:contentDescription="@string/text_product_detail_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iced_americano"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:loadImage="@{viewModel.product.imageUrl}" />

                <TextView
                    android:id="@+id/textView_product_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:text="@{viewModel.product.name}"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView_product_detail"
                    tools:text="아이스 카페 아메리카노" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_product_detail_name" />

                <TextView
                    android:id="@+id/textView_price_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="18dp"
                    android:text="@{@string/format_price(viewModel.product.price * viewModel.product.quantity)}"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_divider"
                    tools:text="99,800원" />

                <include
                    android:id="@+id/layout_quantity_selector"
                    layout="@layout/product_count_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="14dp"
                    app:handler="@{handler}"
                    app:layout_constraintBottom_toBottomOf="@id/textView_price_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView_price_info"
                    app:product="@{viewModel.product}" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="29dp"
                    android:background="@drawable/cart_item_background"
                    android:onClick="@{() -> detailHandler.onProductClick(viewModel.lastViewed)}"
                    android:paddingHorizontal="18dp"
                    android:paddingVertical="16dp"
                    android:visibility="@{viewModel.lastViewed == null ? View.GONE : View.VISIBLE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_price_info">

                    <TextView
                        android:id="@+id/textView_last_viewed_product_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_last_viewed_product_info"
                        android:textColor="@color/mint_blue"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@{viewModel.lastViewed.name}"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView_last_viewed_product_info"
                        tools:text="아이스 카페 아메리카노" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_to_cart_button"
            android:onClick="@{() -> detailHandler.onAddCartItem()}"
            android:padding="12dp"
            android:text="@string/text_add_to_cart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>