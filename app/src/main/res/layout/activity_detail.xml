<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="woowacourse.shopping.view.detail.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.home.HomeActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_500"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_finish"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="16dp"
                android:backgroundTint="@android:color/transparent"
                android:onClick="@{() -> viewModel.navigateBackToHome()}"
                android:src="@drawable/ic_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/iv_detail_product_image"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:scaleType="fitXY"
            app:imageUrl="@{viewModel.productDetailUiState.product.imageUrl}"
            app:layout_constraintTop_toBottomOf="@id/toolbar_detail"
            tools:layout_editor_absoluteX="-157dp"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tv_detail_product_name"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_margin="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{viewModel.productDetailUiState.product.name}"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_detail_product_image"
            tools:text="1 대전 장인약과" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_product_name" />

        <TextView
            android:id="@+id/tv_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:price="@{viewModel.productDetailUiState.quantity * viewModel.productDetailUiState.product.price}"
            tools:text="10,000원" />

        <include
            android:id="@+id/btn_quantity_control"
            layout="@layout/btn_quantity_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            app:clickListener="@{viewModel}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:itemId="@{viewModel.productDetailUiState.product.id}"
            app:quantity="@{viewModel.productDetailUiState.quantity}" />

        <TextView
            android:id="@+id/btn_put_cart"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green_300"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:onClick="@{() -> viewModel.addToCart()}"
            android:text="장바구니 담기"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_recent_viewed_products"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shopping_cart_item_gridview"
            app:layout_constraintBottom_toTopOf="@id/btn_put_cart"
            app:layout_constraintLeft_toLeftOf="@id/tv_detail_price"
            app:layout_constraintRight_toRightOf="@id/btn_quantity_control"
            app:viewVisibility="@{viewModel.isRecentProductVisible}">

            <TextView
                android:id="@+id/tv_recent_viewed_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="14dp"
                android:text="마지막으로 본 상품"
                android:textColor="@color/green_300"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recent_viewed_product_name"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> viewModel.navigateToRecentProduct()}"
                android:text="@{viewModel.productDetailUiState.lastlyViewedProduct.productName}"
                android:textColor="@color/gray_500"
                android:textSize="18dp"
                app:layout_constraintLeft_toLeftOf="@id/tv_recent_viewed_product_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent_viewed_product_title"
                tools:text="PET보틀-정사각형(500ml)"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
