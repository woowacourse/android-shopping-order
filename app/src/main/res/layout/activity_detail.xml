<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.product.detail.DetailViewModel" />

        <variable
            name="addToCartClickListener"
            type="woowacourse.shopping.product.detail.AddToCartClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".product.detail.DetailActivity">

                <ImageView
                    android:id="@+id/imageView_product_detail"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:contentDescription="@string/text_product_detail_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/iced_americano"
                    app:imageUrl="@{vm.product.imageUrl}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_product_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="16dp"
                    android:text="@{vm.product.name}"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageView_product_detail"
                    tools:text="아이스 카페 아메리카노" />

                <View
                    android:id="@+id/view_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="17dp"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView_product_detail_name" />

                <TextView
                    android:id="@+id/textView_price_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@{@string/format_price(vm.price)}"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@id/textView_product_detail_name"
                    app:layout_constraintTop_toBottomOf="@id/view_divider"
                    tools:text="30,000원" />

                <include
                    android:id="@+id/layout_quantity_control_bar"
                    layout="@layout/quantity_control_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@id/textView_price_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView_price_info"
                    bind:quantity="@{vm.quantity.toString()}" />

                <include
                    android:id="@+id/layout_latest_viewed_product"
                    layout="@layout/latest_viewed_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="@id/layout_quantity_control_bar"
                    app:layout_constraintStart_toStartOf="@id/textView_price_info"
                    app:layout_constraintTop_toBottomOf="@id/textView_price_info"
                    bind:parentUid="@{vm.product.id}" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <Button
            android:id="@+id/button_add_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/add_to_cart_button"
            android:onClick="@{() -> addToCartClickListener.onClick(vm.product)}"
            android:padding="12dp"
            android:text="@string/text_add_to_cart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
