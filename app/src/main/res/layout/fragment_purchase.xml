<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.cart.PurchaseFragment">


        <TextView
            android:id="@+id/tv_appliable_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:text="적용 가능한 쿠폰"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_coupon_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*쿠폰은 하나만 적용 가능 합니다."
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_appliable_coupon_title"
            app:layout_constraintTop_toBottomOf="@id/tv_appliable_coupon_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_coupons"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_coupon_guide"
            tools:listitem="@layout/item_coupon" />

        <View
            android:id="@+id/border_coupon_1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_200"
            app:layout_constraintTop_toBottomOf="@id/rv_coupons" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_price"
            app:layout_constraintTop_toBottomOf="@id/border_coupon_1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_purchase_price_title"
                android:text="주문 금액"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginStart="18dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="21dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_discounted_price_title"
                android:text="쿠폰 할인 계획"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_purchase_price_title"
                app:layout_constraintStart_toStartOf="@id/tv_purchase_price_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_delivery_fee_title"
                android:text="배송비"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="21dp"
                app:layout_constraintTop_toBottomOf="@id/tv_discounted_price_title"
                app:layout_constraintStart_toStartOf="@id/tv_purchase_price_title"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="200,000원"
                app:layout_constraintTop_toTopOf="@id/tv_purchase_price_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_purchase_price_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                android:textStyle="bold"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_discounted_price_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_discounted_price_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="18dp"
                tools:text="-5,000원"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="3,000원"
                app:layout_constraintTop_toTopOf="@id/tv_delivery_fee_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_delivery_fee_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginEnd="18dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/border_coupon_2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_200"
            app:layout_constraintTop_toBottomOf="@id/layout_price" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/border_coupon_2"
            android:layout_marginStart="18dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="21dp"
            android:id="@+id/tv_final_purchase_title"
            android:text="총 결제금액" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_final_purchase_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_final_purchase_title"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="198,000원"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginEnd="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/teal_200"
            android:text="결제하기"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
