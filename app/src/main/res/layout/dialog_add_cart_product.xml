<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.common.model.ProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cart_product_dialog_background"
        android:padding="12dp">

        <TextView
            android:id="@+id/dialog_cart_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{product.title}"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘 [든든] 동원 스위트콘 [든든] 동원 스위트콘" />

        <TextView
            android:id="@+id/dialog_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/product_price(product.price)}"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_cart_product_title"
            tools:text="99,800원" />

        <Button
            android:id="@+id/dialog_cart_product_amount_minus_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/cart_product_amount_bar_minus_background"
            android:text="@string/minus"
            android:textColor="#555555"
            android:textSize="22sp"
            app:layout_constraintEnd_toStartOf="@id/dialog_cart_product_amount"
            app:layout_constraintTop_toTopOf="@id/dialog_cart_product_amount" />

        <TextView
            android:id="@+id/dialog_cart_product_amount"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:textColor="#555555"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/dialog_cart_product_amount_minus_button"
            app:layout_constraintEnd_toStartOf="@id/dialog_cart_product_amount_plus_button"
            app:layout_constraintTop_toBottomOf="@id/dialog_cart_product_title"
            tools:text="1" />

        <Button
            android:id="@+id/dialog_cart_product_amount_plus_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/cart_product_amount_bar_plus_background"
            android:text="@string/plus"
            android:textColor="#555555"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dialog_cart_product_amount" />

        <Button
            android:id="@+id/dialog_add_to_cart_button"
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:background="@color/primary"
            android:text="@string/cart_dialog_add_to_cart_button"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dialog_cart_product_amount" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
