<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="shoppingProduct"
            type="woowacourse.shopping.common.model.ShoppingProductModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="10dp">

        <ImageView
            android:id="@+id/product_list_picture"
            loadPicture="@{shoppingProduct.product.picture}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/product_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{shoppingProduct.product.title}"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/product_list_picture"
            app:layout_constraintStart_toStartOf="@id/product_list_picture"
            app:layout_constraintTop_toBottomOf="@id/product_list_picture"
            tools:text="PET보틀-정사각형 딸기 우유" />

        <TextView
            android:id="@+id/product_list_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{@string/product_price(shoppingProduct.product.price)}"
            android:textColor="#333333"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/product_list_title"
            app:layout_constraintStart_toStartOf="@id/product_list_title"
            app:layout_constraintTop_toBottomOf="@id/product_list_title"
            tools:text="10,000원" />

        <Button
            android:id="@+id/new_cart_product_amount_plus_button"
            isVisible="@{shoppingProduct.amount == 0}"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/add_to_cart_button_background"
            android:text="@string/plus"
            android:textColor="#555555"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@id/product_list_picture"
            app:layout_constraintEnd_toEndOf="@id/product_list_picture" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cart_product_amount_bar"
            isVisible="@{shoppingProduct.amount > 0}"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@id/product_list_picture"
            app:layout_constraintEnd_toEndOf="@id/product_list_picture"
            app:layout_constraintStart_toStartOf="@id/product_list_picture">

            <Button
                android:id="@+id/cart_product_amount_minus_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/cart_product_amount_bar_minus_background"
                android:text="@string/minus"
                android:textColor="#555555"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cart_product_amount_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="@{Integer.toString(shoppingProduct.amount)}"
                android:textColor="#555555"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/cart_product_amount_minus_button"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1" />

            <Button
                android:id="@+id/cart_product_amount_plus_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/cart_product_amount_bar_plus_background"
                android:text="@string/plus"
                android:textColor="#555555"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintStart_toEndOf="@id/cart_product_amount_text"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
