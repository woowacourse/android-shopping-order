<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/productPreviewImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="14dp"
        android:contentDescription="@null"
        android:src="@color/gray_2"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        android:background="@color/gray_2"
        app:layout_constraintEnd_toEndOf="@id/productPreviewImage"
        app:layout_constraintStart_toStartOf="@id/productPreviewImage"
        app:layout_constraintTop_toBottomOf="@id/productPreviewImage" />

    <TextView
        android:id="@+id/productPriceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:background="@color/gray_2"
        app:layout_constraintEnd_toEndOf="@id/productPreviewImage"
        app:layout_constraintStart_toStartOf="@id/productPreviewImage"
        app:layout_constraintTop_toBottomOf="@id/productNameText" />
</androidx.constraintlayout.widget.ConstraintLayout>
