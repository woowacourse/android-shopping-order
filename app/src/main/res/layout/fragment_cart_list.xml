<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.ui.cart.ShoppingCartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/product_detail_toolbar"
            onNavigationBackClick="@{() -> vm.onBackClick()}"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_cart_description"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_list"
            android:name="woowacourse.shopping.cart.CartFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/include_cart_list_order"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/product_detail_toolbar"
            tools:context=".ui.cart.ShoppingCartFragment"
            tools:itemCount="3"
            tools:listitem="@layout/holder_cart" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_cart_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_detail_toolbar"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/item_cart_skeleton" />

                <include layout="@layout/item_cart_skeleton" />

                <include layout="@layout/item_cart_skeleton" />

                <include layout="@layout/item_cart_skeleton" />

                <include layout="@layout/item_cart_skeleton" />

            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <include
            android:id="@+id/include_cart_list_order"
            layout="@layout/layout_cart_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            bind:isAllSelected="@{vm.isAllSelected}"
            bind:onAllCartItemSelectedListener="@{vm}"
            bind:onNavigationOrderListener="@{vm}"
            bind:selectedCartItemsTotalPrice="@{vm.selectedCartItemsTotalPrice}"
            bind:selectedItemsCount="@{vm.selectedCartItemsCount}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
