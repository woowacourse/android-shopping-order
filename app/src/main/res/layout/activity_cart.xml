<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.ui.cart.viewmodel.CartViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.cart.CartActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_cart"
            style="@style/ToolbarStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="@string/app_name">

        </com.google.android.material.appbar.MaterialToolbar>

        <include
            layout="@layout/layout_cart_skeleton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:isVisible="@{vm.cart.isLoading}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart" />

        <include
            android:id="@+id/rv_recommend"
            layout="@layout/layout_recommend_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:isVisible="@{vm.isRecommendPage}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="추천 상품이 없습니다."
            android:textSize="20dp"
            app:isVisible="@{vm.noRecommendProductState}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart"
            isVisible="@{!vm.cart.isLoading &amp; !vm.isRecommendPage}"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="18dp"
            android:paddingBottom="60dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/layout_order"
            app:layout_constraintTop_toBottomOf="@id/toolbar_cart"
            tools:listitem="@layout/item_cart"
            tools:visibility="gone" />

        <include
            android:id="@+id/layout_order"
            layout="@layout/layout_order"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:productCount="@{vm.checkedItemCount + vm.cartOfRecommendProductCount}"
            app:totalPrice="@{vm.totalPrice}"
            app:vm="@{vm}" />

        <CheckBox
            android:id="@+id/cb_cart_item_total"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/checkbox"
            android:button="@android:color/transparent"
            android:checked="@{vm.isTotalChbChecked}"
            android:onClickListener="@{() -> vm.totalCheckBoxCheck()}"
            app:isVisible="@{!vm.isRecommendPage}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:checked="true" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
