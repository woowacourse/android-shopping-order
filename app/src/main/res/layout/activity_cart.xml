<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="woowacourse.shopping.presentation.ui.cart.CartViewModel" />

        <variable
            name="cartHandler"
            type="woowacourse.shopping.presentation.ui.cart.CartHandler" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.cart.CartActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_selected_total_price"
            bindTextFormattedCurrency="@{viewModel.totalPrice}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/dark_grey"
            android:gravity="end"
            android:paddingHorizontal="16dp"
            android:paddingVertical="28dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/order"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="00,000원" />

        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/teal_200"
            android:onClick="@{()->cartHandler.handleOrderState()}"
            android:paddingHorizontal="16dp"
            android:paddingVertical="28dp"
            android:text="@{@string/order_text(viewModel.totalCount)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_selected_total_price" />

        <CheckBox
            android:id="@+id/total_check_box"
            bindTotalCheckBox="@{cartHandler}"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="33dp"
            android:checked="@{viewModel.isAllCartItemsSelected}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_selected_total_price"
            app:visibility="@{viewModel.showTotalCheckBox}" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/whole"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/total_check_box"
            app:layout_constraintStart_toStartOf="@id/total_check_box"
            app:layout_constraintTop_toBottomOf="@id/total_check_box"
            app:visibility="@{viewModel.showTotalCheckBox}" />

        <include
            android:id="@+id/cart_skeleton"
            layout="@layout/item_cart_skeleton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibility="@{viewModel.showSkeleton}"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
