<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.presentation.cart.CartViewModel" />

        <variable
            name="clickListener"
            type="woowacourse.shopping.presentation.cart.CartPageClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.cart.CartActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_cart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/baemin"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/cart_toolbar_text"
            app:titleTextColor="@color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cart_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingHorizontal="16dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/layout_cart_total_price"
            app:layout_constraintTop_toBottomOf="@id/tb_cart"
            tools:listitem="@layout/item_cart_product" />

        <TextView
            android:id="@+id/layout_cart_total_price"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:background="@color/gray5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_cart_recommend"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/checkbox_all_check"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:buttonTint="@color/baemin"
            android:checked="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/layout_cart_total_price" />

        <TextView
            android:id="@+id/tv_all_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="전체"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/checkbox_all_check"
            app:layout_constraintStart_toStartOf="@id/checkbox_all_check"
            app:layout_constraintTop_toBottomOf="@id/checkbox_all_check" />

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@{@string/product_price(vm.selectedTotalPrice)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/layout_cart_total_price"
            app:layout_constraintEnd_toEndOf="@id/layout_cart_total_price"
            app:layout_constraintTop_toTopOf="@id/layout_cart_total_price"
            tools:text="9,111,184,200원" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <TextView
            android:id="@+id/layout_cart_recommend"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:background="@color/baemin"
            android:gravity="center"
            android:onClick="@{() -> clickListener.onClickRecommend()}"
            android:text="@{@string/cart_order_text(vm.selectedTotalCount)}"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline"
            tools:text="주문하기 (9999999)" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_layout_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/layout_cart_total_price"
            app:layout_constraintTop_toBottomOf="@id/tb_cart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="18dp">

                <include layout="@layout/layout_cart_product_shimmer" />

                <include layout="@layout/layout_cart_product_shimmer" />

                <include layout="@layout/layout_cart_product_shimmer" />

                <include layout="@layout/layout_cart_product_shimmer" />

                <include layout="@layout/layout_cart_product_shimmer" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
