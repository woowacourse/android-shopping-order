<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="woowacourse.shopping.cart.CartViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container_cart_selection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_cart_bottom_bar"
            />

        <View
            android:id="@+id/view_cart_bottom_bar"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:background="@color/gray_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_cart_order"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view_cart_order"
            android:layout_width="0dp"
            android:layout_height="78dp"
            android:background="@color/mint_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/view_cart_bottom_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="184,000원"
            android:text="@{@string/format_price(vm.totalAmount)}"
            style="@style/CartPageOrderStyle"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/view_cart_bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/view_cart_bottom_bar"
            app:layout_constraintEnd_toEndOf="@id/view_cart_bottom_bar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="주문하기(2)"
            android:text="@{@string/text_order(vm.cartItemCount)}"
            style="@style/CartPageOrderStyle"
            app:layout_constraintTop_toTopOf="@id/view_cart_order"
            app:layout_constraintStart_toStartOf="@id/view_cart_order"
            app:layout_constraintBottom_toBottomOf="@id/view_cart_order"
            app:layout_constraintEnd_toEndOf="@id/view_cart_order"
        />

        <CheckBox
            android:id="@+id/checkbox_all_selection"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:checked="true"
            android:layout_marginStart="@dimen/spacing_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/mint_blue"
            android:foregroundTint="@color/white"
            app:layout_constraintStart_toStartOf="@id/view_cart_bottom_bar"
            app:layout_constraintTop_toTopOf="@id/view_cart_bottom_bar"
            app:layout_constraintBottom_toBottomOf="@id/textView_all_selection" />

        <TextView
            android:id="@+id/textView_all_selection"
            style="@style/CartPageAllSelectionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="전체"
            app:layout_constraintEnd_toEndOf="@id/checkbox_all_selection"
            app:layout_constraintStart_toStartOf="@id/checkbox_all_selection"
            app:layout_constraintTop_toBottomOf="@id/checkbox_all_selection"
            app:layout_constraintBottom_toBottomOf="@id/view_cart_bottom_bar"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
