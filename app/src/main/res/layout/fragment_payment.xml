<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="woowacourse.shopping.presentation.ui.shoppingcart.payment.PaymentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.shoppingcart.payment.PaymentFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_usable_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="30dp"
                    android:text="적용 가능한 쿠폰"
                    android:textColor="@color/gray4"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_valid_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="* 쿠폰은 1개만 적용 가능합니다."
                    android:textColor="@color/gray5"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="@id/tv_usable_coupons"
                    app:layout_constraintTop_toBottomOf="@id/tv_usable_coupons" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_coupons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tv_valid_coupons"
                    tools:listitem="@layout/holder_coupon" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dv_first"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="31dp"
                    app:dividerColor="@color/gray7"
                    app:layout_constraintTop_toBottomOf="@id/rv_coupons" />

                <TextView
                    android:id="@+id/tv_order_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="21dp"
                    android:text="주문 금액"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dv_first" />

                <TextView
                    android:id="@+id/tv_order_amount_value"
                    priceToCurrency="@{vm.uiState.orderTotalPrice}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dv_first"
                    app:layout_constraintTop_toTopOf="@id/tv_order_amount"
                    tools:text="204,200원" />

                <TextView
                    android:id="@+id/tv_coupon_discount_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="쿠폰 할인 금액"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_order_amount"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_amount" />

                <TextView
                    android:id="@+id/tv_coupon_discount_amount_value"
                    priceToCurrency="@{vm.uiState.isAnyChecked ? vm.uiState.discountPrice : 0}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="@id/tv_coupon_discount_amount"
                    app:layout_constraintEnd_toEndOf="@id/tv_order_amount_value"
                    app:layout_constraintTop_toTopOf="@id/tv_coupon_discount_amount"
                    tools:text="-5,000원" />

                <TextView
                    android:id="@+id/tv_delivery_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="배송비"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_order_amount"
                    app:layout_constraintTop_toBottomOf="@id/tv_coupon_discount_amount" />

                <TextView
                    android:id="@+id/delivery_fee_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    priceToCurrency="@{3000}"
                    app:layout_constraintBottom_toBottomOf="@id/tv_delivery_fee"
                    app:layout_constraintEnd_toEndOf="@id/tv_coupon_discount_amount_value"
                    app:layout_constraintTop_toTopOf="@id/tv_delivery_fee"
                    tools:text="3,000원" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/dv_second"
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:layout_marginTop="21dp"
                    app:dividerColor="@color/gray7"
                    app:layout_constraintTop_toBottomOf="@id/tv_delivery_fee" />

                <TextView
                    android:id="@+id/tv_total_payment_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="100dp"
                    android:text="총 결제 금액"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_order_amount"
                    app:layout_constraintTop_toBottomOf="@id/dv_second" />

                <TextView
                    android:id="@+id/tv_total_payment_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray4"
                    android:textSize="18dp"
                    priceToCurrency="@{vm.uiState.totalPaymentPrice}"
                    app:layout_constraintEnd_toEndOf="@id/tv_coupon_discount_amount_value"
                    app:layout_constraintTop_toTopOf="@id/tv_total_payment_amount"
                    tools:text="202,200원" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mint"
            android:onClick="@{() -> vm.makeAPayment()}"
            android:paddingVertical="12dp"
            android:text="결제하기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>