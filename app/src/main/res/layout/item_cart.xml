<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_cart"
        android:padding="12dp">

        <CheckBox
            android:id="@+id/cb_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{cartProductUiModel.isChecked}"
            app:layout_constraintEnd_toStartOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:onClick="@{() -> cartActionHandler.onDelete(cartProductUiModel)}"
            android:src="@drawable/ic_close_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_name"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv_cart"
            cartImgUrl="@{cartProductUiModel.cartProduct.imgUrl}"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_cart_item"
            tools:src="@drawable/ic_close_white" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="@{@string/won(cartProductUiModel.cartProduct.price * cartProductUiModel.cartProduct.quantity)}"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_close"
            tools:text="000원" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartProductUiModel.cartProduct.name}"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_close"
            app:layout_constraintStart_toEndOf="@id/cb_cart_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="상품 제목" />

        <include
            android:id="@+id/layout_counter"
            layout="@layout/selector_quantity"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            app:cartProduct="@{cartProductUiModel.cartProduct}"
            app:layout_constraintBottom_toTopOf="@id/tv_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:cartCountHandler="@{cartActionHandler}" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="cartProductUiModel"
            type="woowacourse.shopping.presentation.ui.cart.model.CartProductUiModel" />

        <variable
            name="cartActionHandler"
            type="woowacourse.shopping.presentation.ui.cart.CartActionHandler" />
    </data>
</layout>