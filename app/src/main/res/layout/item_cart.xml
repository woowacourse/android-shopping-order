<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cartProduct"
            type="woowacourse.shopping.domain.model.CartProduct" />

        <variable
            name="onClickHandler"
            type="woowacourse.shopping.ui.cart.adapter.CartViewHolder.OnClickHandler" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="12dp"
        android:background="@drawable/bg_cart_white_radius_4dp_stroke_gray_4">

        <TextView
            android:id="@+id/cartProductNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartProduct.productDetail.name}"
            android:textColor="@color/gray_5"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/cartProductRemoveButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/cartProductImage"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{cartProduct.productDetail.imageUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cartProductNameText"
            tools:src="@color/black" />

        <ImageView
            android:id="@+id/cartProductRemoveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:onClick="@{() -> onClickHandler.onRemoveCartProductClick(cartProduct.productDetail.id)}"
            android:padding="12dp"
            android:src="@drawable/ic_cart_remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <woowacourse.shopping.ui.custom.CartCountView
            android:id="@+id/cartProductCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:count="@{cartProduct.quantity}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cartProductImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="18dp"
            android:text="@{@string/catalog_price(cartProduct.totalPrice)}"
            android:textColor="@color/gray_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="99,800원" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
