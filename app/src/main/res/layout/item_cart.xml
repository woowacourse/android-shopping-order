<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="quantityChangeListener"
            type="woowacourse.shopping.feature.QuantityChangeListener" />

        <variable
            name="cartItem"
            type="woowacourse.shopping.domain.model.CartItem" />

        <variable
            name="cartItemClickHandler"
            type="woowacourse.shopping.feature.cart.cartdetail.CartItemClickHandler" />


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/cart_item_background">

        <CheckBox
            android:id="@+id/checkBox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:focusable="false"
            android:padding="0dp"
            android:focusableInTouchMode="false"
            android:checked="@{cartItem.isSelected}"
            android:onClick="@{() -> cartItemClickHandler.toggleSelected(cartItem)}"
            app:layout_constraintBottom_toTopOf="@+id/iv_cart_item_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cart_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartItem.goods.name}"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iv_cart_item_delete_button"
            app:layout_constraintStart_toEndOf="@+id/checkBox_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[굿즈-키홀더] 봇치 더 록! 애니판 테쿠토코 쵸이데카 아크릴키홀더B" />

        <ImageView
            android:id="@+id/iv_cart_item_image"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:contentDescription="@string/cart_item_image_description"
            android:scaleType="centerCrop"
            app:imgUrl="@{cartItem.goods.thumbnailUrl}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cart_item_name"
            app:srcCompat="@drawable/ic_launcher_background" />

        <include
            android:id="@+id/quantitySelector"
            layout="@layout/quantity_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="12dp"
            app:cartItem="@{cartItem}"
            app:quantityChangeListener="@{quantityChangeListener}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_cart_item_price"/>

        <TextView
            android:id="@+id/tv_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="12dp"
            android:text="@{@string/goods_price(cartItem.totalPrice)}"
            android:textColor="@color/gray_700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="84,400원" />

        <ImageView
            android:id="@+id/iv_cart_item_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:contentDescription="@string/cart_item_delete_button_description"
            android:onClick="@{() -> cartItemClickHandler.itemDelete(cartItem)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_gray" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>