<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="actionHandler"
            type="woowacourse.shopping.presentation.cart.CartActionHandler" />
        <variable
            name="cartUiModel"
            type="woowacourse.shopping.presentation.cart.model.CartUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_border_4">

        <CheckBox
            android:id="@+id/check_box_cart"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:checked="@{cartUiModel.isSelected}"
            android:onCheckedChanged="@{(_, isChecked) -> actionHandler.selectCartItem(cartUiModel.product.id,isChecked)}"
            android:buttonTint="@color/teal_500"
            app:layout_constraintEnd_toStartOf="@id/tv_cart_product_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_cart_product_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{cartUiModel.product.name}"
            android:textColor="@color/gray_500"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/iv_cart_exit"
            app:layout_constraintStart_toEndOf="@id/check_box_cart"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="[든든] 동원 스위트콘" />

        <ImageView
            android:id="@+id/iv_cart_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:padding="20dp"
            android:src="@drawable/ic_exit"
            android:onClick="@{() -> actionHandler.deleteCartItem(cartUiModel.product.id)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray_200" />

        <include
            android:id="@+id/btn_add_cart_quantity"
            layout="@layout/btn_add_cart_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            app:onPlusClickListener = "@{() -> actionHandler.increaseQuantity(cartUiModel.product.id)}"
            app:onMinusClickListener = "@{() -> actionHandler.decreaseQuantity(cartUiModel.product.id)}"
            app:countNum = "@{cartUiModel.quantity.count}"
            app:layout_constraintBottom_toTopOf="@id/tv_cart_product_price"
            app:layout_constraintEnd_toEndOf="@id/iv_cart_exit"
            app:layout_constraintTop_toBottomOf="@id/iv_cart_exit" />

        <ImageView
            android:id="@+id/iv_cart_product"
            android:layout_width="136dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            app:imageUrl="@{cartUiModel.product.imageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="2:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/check_box_cart" />

        <TextView
            android:id="@+id/tv_cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:text="@{@string/product_price(cartUiModel.product.price * cartUiModel.quantity.count)}"
            android:textColor="@color/gray_500"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/iv_cart_exit"
            tools:text="99,800원" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
