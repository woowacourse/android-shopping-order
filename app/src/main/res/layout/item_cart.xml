<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="countHandler"
            type="woowacourse.shopping.presentation.ui.counter.CounterHandler" />

        <variable
            name="eventHandler"
            type="woowacourse.shopping.presentation.ui.cart.selection.CartItemSelectionEventHandler" />

        <variable
            name="cartItem"
            type="woowacourse.shopping.presentation.ui.cart.CartItemUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/item_gridview"
        android:onClick="@{() -> eventHandler.onProductClicked(cartItem.productId)}">

        <CheckBox
            android:id="@+id/checkBox"
            android:onClick="@{() -> eventHandler.onCheckItem(cartItem.id)}"
            android:checked="@{cartItem.isChecked}"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="18dp"
            android:text="@{cartItem.productName}"
            android:textColor="@color/gray_500"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/checkBox"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="상품명" />

        <ImageView
            android:id="@+id/iv_item_product_image"
            android:layout_width="136dp"
            android:layout_height="72dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="18dp"
            android:scaleType="fitXY"
            app:imageUrl="@{cartItem.imgUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_product_name"
            tools:src="@color/shimmer_content_color" />

        <include
            android:id="@+id/btn_quantity"
            layout="@layout/cartitem_quantity_selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            app:cartItem="@{cartItem}"
            app:countHandler="@{countHandler}"
            app:layout_constraintBottom_toTopOf="@id/tv_cart_item_price"
            app:layout_constraintEnd_toEndOf="@id/tv_cart_item_price" />

        <TextView
            android:id="@+id/tv_cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:textColor="@color/gray_500"
            android:textSize="16dp"
            android:text="@{@string/price_format(cartItem.price*cartItem.quantity)}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_product_image"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="10,000원" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="12dp"
            android:onClick="@{() -> eventHandler.onXButtonClicked(cartItem.id)}"
            android:src="@drawable/ic_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray_100" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
