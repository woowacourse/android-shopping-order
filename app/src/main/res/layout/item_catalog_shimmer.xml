<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_shimmer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_88"
        android:contentDescription="@null"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_shimmer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@color/gray_88"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/image_view_shimmer" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:background="@color/gray_88"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/text_view_shimmer_title"
        app:layout_constraintStart_toStartOf="@id/text_view_shimmer_title"
        app:layout_constraintTop_toBottomOf="@id/text_view_shimmer_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
